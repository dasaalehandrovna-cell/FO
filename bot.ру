# -----------------------------
# –ö–æ–Ω—Ñ–∏–≥—É—Ä–∞—Ü–∏—è
# -----------------------------
TOKEN = os.getenv("BOT_TOKEN")
OWNER_ID = os.getenv("OWNER_ID")  # —Å—Ç—Ä–æ–∫–∞ —Å —á–∏—Å–ª–æ–º –∏–ª–∏ None
APP_URL = os.getenv("APP_URL", "https://yourapp.onrender.com")

from datetime import timezone, timedelta
try:
    TZ = ZoneInfo(os.getenv("TZ", "America/Argentina/Buenos_Aires").strip())
except Exception:
    TZ = timezone(timedelta(hours=-3))  # –∑–∞–ø–∞—Å–Ω–æ–π –≤–∞—Ä–∏–∞–Ω—Ç (UTC-3, –ë—É—ç–Ω–æ—Å-–ê–π—Ä–µ—Å)

DATA_FILE = "data.json"
CSV_FILE = "data.csv"
LOG_FILE = "log.txt"
PORT = int(os.environ.get("PORT", 5000))
VERSION = "9.8.6-fo_5"

# Keep-alive
KEEP_ALIVE_INTERVAL_SECONDS = int(os.getenv("KEEP_ALIVE_INTERVAL_SECONDS", 11 * 60))
KEEP_ALIVE_SEND_TO_OWNER = True

# -----------------------------
# –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –ø–æ–≤–µ–¥–µ–Ω–∏–µ–º –ù–ê–í–ò–ì–ê–¶–ò–ò (‚úÖ –∏–∑–º–µ–Ω–µ–Ω–æ –ø–æ–¥ —Ç–≤–æ—é –ª–æ–≥–∏–∫—É)
# -----------------------------
# ‚úÖ –ò–∑–º–µ–Ω–µ–Ω–æ: –æ—Å—Ç–∞–≤–ª—è–µ–º –æ–∫–Ω–∞ –¥—Ä—É–≥–∏—Ö –¥–∞—Ç; —É–¥–∞–ª—è–µ–º —Ç–æ–ª—å–∫–æ —Å—Ç–∞—Ä–æ–µ –æ–∫–Ω–æ —Ç–æ–π –∂–µ –¥–∞—Ç—ã
DELETE_SOURCE_WINDOW_ON_NAV = False        # –ø—Ä–∏ –ø–µ—Ä–µ—Ö–æ–¥–µ –ù–ï —É–¥–∞–ª—è—Ç—å –æ–∫–Ω–æ –∏—Å—Ö–æ–¥–Ω–æ–≥–æ –¥–Ω—è
DELETE_TARGET_OLD_WINDOW_ON_NAV = True     # –ø—Ä–∏ –ø–µ—Ä–µ—Ö–æ–¥–µ —É–¥–∞–ª—è—Ç—å –ø—Ä–µ–∂–Ω–µ–µ –æ–∫–Ω–æ –≤—ã–±—Ä–∞–Ω–Ω–æ–≥–æ –¥–Ω—è (—ç—Ç–æ–π –∂–µ –¥–∞—Ç—ã)
ALWAYS_CREATE_NEW_ON_NAV = True            # –ø—Ä–∏ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏ –Ω–µ —Ä–µ–¥–∞–∫—Ç–∏—Ä—É–µ–º, –∞ —Å–æ–∑–¥–∞—ë–º –Ω–æ–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ-–æ–∫–Ω–æ

# -----------------------------
# –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
