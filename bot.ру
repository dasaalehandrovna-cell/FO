# ‚Ä¢ –ü–æ–ª–Ω—ã–π UI –∫–∞–∫ –≤ Code_019e
# ‚Ä¢ –ë—ç–∫–∞–ø / –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –Ω–∞ Google Drive (–æ–±–∞ –≤–∞—Ä–∏–∞–Ω—Ç–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏)
# ‚Ä¢ –ü–µ—Ä–µ—Å—ã–ª–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏–π –º–µ–∂–¥—É —á–∞—Ç–∞–º–∏ (—Ç–æ–ª—å–∫–æ OWNER)
# ‚Ä¢ –ê–∫—Ç–∏–≤–∞—Ü–∏—è —Ñ–∏–Ω–∞–Ω—Å–æ–≤–æ–≥–æ —Ä–µ–∂–∏–º–∞ /–ø–æ–µ—Ö–∞–ª–∏–§–û123/
# ‚Ä¢ –ü–∞—Ä—Å–µ—Ä —Å –ª—é–±—ã–º–∏ —Ä–∞–∑–¥–µ–ª–∏—Ç–µ–ª—è–º–∏
# ‚Ä¢ –ë–∞–ª–∞–Ω—Å –ø–æ —Ç–µ–∫—É—â–µ–º—É —á–∞—Ç—É –∏ –æ—Ç–¥–µ–ª—å–Ω—ã–µ —Ñ–∞–π–ª—ã –Ω–∞ Drive –ø–æ chat_id
# ============================================================

import os, io, re, csv, json, html, time, logging, threading, requests
from datetime import datetime, timedelta, timezone
from zoneinfo import ZoneInfo
import telebot
from telebot import types
from flask import Flask, request

# === Google Drive API ===
from googleapiclient.discovery import build
from googleapiclient.http import MediaFileUpload, MediaIoBaseDownload
from google.oauth2 import service_account
from google_auth_oauthlib.flow import InstalledAppFlow

# ============================================================
# ‚öôÔ∏è –ù–ê–°–¢–†–û–ô–ö–ò –ò –ü–ï–†–ï–ú–ï–ù–ù–´–ï –û–ö–†–£–ñ–ï–ù–ò–Ø
# ============================================================
TOKEN = os.getenv("BOT_TOKEN")
OWNER_ID = os.getenv("OWNER_ID")
APP_URL = os.getenv("APP_URL", "https://yourapp.onrender.com")
PORT = int(os.getenv("PORT", 5000))
VERSION = "9.8.6-fo_6+GDriveOnly (UI-full + –ø–µ—Ä–µ—Å—ã–ª–∫–∞)"
KEEP_ALIVE_INTERVAL_SECONDS = int(os.getenv("KEEP_ALIVE_INTERVAL_SECONDS", 660))
SCOPES = ["https://www.googleapis.com/auth/drive.file"]

bot = telebot.TeleBot(TOKEN, threaded=True)
app = Flask(__name__)

try:
    TZ = ZoneInfo(os.getenv("TZ", "America/Argentina/Buenos_Aires"))
except Exception:
    TZ = timezone(timedelta(hours=-3))

LOG_FILE = "log.txt"

# ============================================================
# üß© –ê–í–¢–û–†–ò–ó–ê–¶–ò–Ø –í GOOGLE DRIVE (2 –í–ê–†–ò–ê–ù–¢–ê)
# ============================================================
def build_gdrive_service():
    """–°–æ–∑–¥–∞—ë—Ç –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ Google Drive —á–µ—Ä–µ–∑ Service Account –∏–ª–∏ OAuth"""
    try:
        if os.getenv("SERVICE_ACCOUNT_JSON"):
            creds = service_account.Credentials.from_service_account_info(
                json.loads(os.getenv("SERVICE_ACCOUNT_JSON")), scopes=SCOPES)
            return build("drive", "v3", credentials=creds)

        elif os.path.exists("token.json"):
            from google.oauth2.credentials import Credentials
            creds = Credentials.from_authorized_user_file("token.json", SCOPES)
            return build("drive", "v3", credentials=creds)

        elif os.path.exists("credentials.json"):
            flow = InstalledAppFlow.from_client_secrets_file("credentials.json", SCOPES)
            creds = flow.run_local_server(port=0)
            with open("token.json", "w") as token:
                token.write(creds.to_json())
            return build("drive", "v3", credentials=creds)

        else:
            print("‚ö†Ô∏è –ù–µ—Ç SERVICE_ACCOUNT_JSON –∏–ª–∏ credentials.json ‚Äî GDrive –Ω–µ–¥–æ—Å—Ç—É–ø–µ–Ω.")
    except Exception as e:
        print(f"‚ùå –û—à–∏–±–∫–∞ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ Drive: {e}")
    return None

drive_service = build_gdrive_service()

# ============================================================
# üßæ –õ–û–ì–ò–†–û–í–ê–ù–ò–ï
# ============================================================
logging.basicConfig(
    level=logging.INFO,
    format="[{asctime}] {levelname}: {message}",
    style="{",
    handlers=[
        logging.FileHandler(LOG_FILE, encoding="utf-8"),
        logging.StreamHandler()
    ]
)
def log_info(m): logging.info(m)
def log_warn(m): logging.warning(m)
def log_err(m): logging.error(m)

# ============================================================
# ‚è∞ –í–†–ï–ú–Ø
# ============================================================
def now_local(): return datetime.now(TZ)
def today_key(): return now_local().strftime("%Y-%m-%d")

def fmt_num(v):
    try: return f"{v:,.0f}".replace(",", ".")
    except: return str(v)

# ============================================================
# üíæ –°–¢–†–£–ö–¢–£–†–´ –î–ê–ù–ù–´–•
# ============================================================
def default_data():
    return {
        "records": {}, "chats": {}, "active_finance": [],
        "forward_rules": {}, "next_id": 1
    }

def _load_json(path, fallback):
    try:
        if os.path.exists(path):
            with open(path, "r", encoding="utf-8") as f:
                return json.load(f)
    except Exception as e:
        log_err(f"_load_json {path}: {e}")
    return fallback

def _save_json(path, obj):
    try:
        with open(path, "w", encoding="utf-8") as f:
            json.dump(obj, f, ensure_ascii=False, indent=2)
    except Exception as e:
        log_err(f"_save_json {path}: {e}")

DATA_FILE = "data.json"
data = _load_json(DATA_FILE, default_data())

# ============================================================
# üí∞ –ü–ê–†–°–ï–† –°–£–ú–ú –° –†–ê–ó–î–ï–õ–ò–¢–ï–õ–Ø–ú–ò
# ============================================================
def parse_amount(raw):
    try:
        s = str(raw).strip().replace(" ", "").replace(",", ".")
        s = re.sub(r"[^0-9\.\-]", "", s)
        return float(s)
    except:
        return 0.0

# ============================================================
# üì¶ UPLOAD/DOWNLOAD –ù–ê GOOGLE DRIVE –ü–û CHAT_ID
# ============================================================
def gdrive_upload(filename, chat_id):
    """–ó–∞–≥—Ä—É–∂–∞–µ—Ç —Ñ–∞–π–ª –Ω–∞ Drive –¥–ª—è –∫–æ–Ω–∫—Ä–µ—Ç–Ω–æ–≥–æ —á–∞—Ç–∞"""
    if not drive_service: return
    name = f"{os.path.splitext(filename)[0]}_{chat_id}{os.path.splitext(filename)[1]}"
    try:
        media = MediaFileUpload(filename, resumable=True)
        files = drive_service.files().list(q=f"name='{name}'", fields="files(id)").execute().get("files", [])
        if files:
            drive_service.files().update(fileId=files[0]["id"], media_body=media).execute()
            log_info(f"‚òÅÔ∏è –û–±–Ω–æ–≤–ª—ë–Ω {name}")
        else:
            drive_service.files().create(body={"name": name}, media_body=media, fields="id").execute()
            log_info(f"‚òÅÔ∏è –°–æ–∑–¥–∞–Ω {name}")
    except Exception as e:
        log_err(f"gdrive_upload {filename}: {e}")

def gdrive_download(filename, chat_id):
    """–ó–∞–≥—Ä—É–∂–∞–µ—Ç —Ñ–∞–π–ª —Å Drive –ø—Ä–∏ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–∏"""
    if not drive_service: return
    name = f"{os.path.splitext(filename)[0]}_{chat_id}{os.path.splitext(filename)[1]}"
    try:
        files = drive_service.files().list(q=f"name='{name}'", fields="files(id)").execute().get("files", [])
        if not files:
            log_warn(f"‚ö†Ô∏è –§–∞–π–ª {name} –Ω–µ –Ω–∞–π–¥–µ–Ω.")
            return
        request = drive_service.files().get_media(fileId=files[0]["id"])
        with io.FileIO(filename, "wb") as f:
            downloader = MediaIoBaseDownload(f, request)
            done = False
            while not done:
                status, done = downloader.next_chunk()
        log_info(f"‚úÖ –ó–∞–≥—Ä—É–∂–µ–Ω {name}")
    except Exception as e:
        log_err(f"gdrive_download {filename}: {e}")
# ============================================================
# üì§ –≠–ö–°–ü–û–†–¢ –í CSV –ò –°–û–•–†–ê–ù–ï–ù–ò–ï –ù–ê DRIVE
# ============================================================

def export_to_csv(chat_id):
    """–≠–∫—Å–ø–æ—Ä—Ç–∏—Ä—É–µ—Ç –¥–∞–Ω–Ω—ã–µ —á–∞—Ç–∞ –≤ CSV –∏ –∑–∞–ª–∏–≤–∞–µ—Ç –Ω–∞ Drive"""
    try:
        chat_data = data["chats"].get(str(chat_id), {}).get("records", {})
        csv_name = f"data_{chat_id}.csv"
        with open(csv_name, "w", newline="", encoding="utf-8") as f:
            w = csv.writer(f)
            w.writerow(["date", "id", "comment", "amount"])
            for day, recs in chat_data.items():
                for r in recs:
                    w.writerow([day, r.get("id"), r.get("comment"), r.get("amount")])
        gdrive_upload(csv_name, chat_id)
        log_info(f"üíæ –≠–∫—Å–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω–æ CSV –¥–ª—è —á–∞—Ç–∞ {chat_id}")
    except Exception as e:
        log_err(f"export_to_csv({chat_id}): {e}")

# ============================================================
# üí∞ –ü–û–î–°–ß–Å–¢ –ë–ê–õ–ê–ù–°–ê –¢–û–õ–¨–ö–û –î–õ–Ø –¢–ï–ö–£–©–ï–ì–û –ß–ê–¢–ê
# ============================================================
def calculate_total_for_chat(chat_id):
    try:
        total = 0
        for day, recs in data["chats"].get(str(chat_id), {}).get("records", {}).items():
            for r in recs:
                total += r.get("amount", 0)
        return total
    except:
        return 0

# ============================================================
# üí¨ UI-FULL: –û–°–ù–û–í–ù–û–ï –û–ö–ù–û –î–ù–Ø
# ============================================================

def build_main_menu(chat_id, day_key):
    """–§–æ—Ä–º–∏—Ä—É–µ—Ç –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é –≤—ã–±—Ä–∞–Ω–Ω–æ–≥–æ –¥–Ω—è"""
    kb = types.InlineKeyboardMarkup()
    kb.row(
        types.InlineKeyboardButton("‚ûï –î–æ–±–∞–≤–∏—Ç—å", callback_data=f"add:{day_key}"),
        types.InlineKeyboardButton("‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å", callback_data=f"edit:{day_key}")
    )
    kb.row(
        types.InlineKeyboardButton("‚¨ÖÔ∏è –ü—Ä–µ–¥—ã–¥—É—â–∏–π", callback_data=f"prev:{day_key}"),
        types.InlineKeyboardButton("üìÖ –°–µ–≥–æ–¥–Ω—è", callback_data="today"),
        types.InlineKeyboardButton("‚û°Ô∏è –°–ª–µ–¥—É—é—â–∏–π", callback_data=f"next:{day_key}")
    )
    kb.row(types.InlineKeyboardButton("üìÜ –í—ã–±—Ä–∞—Ç—å –¥–µ–Ω—å", callback_data=f"calendar:{day_key}"))
    kb.row(types.InlineKeyboardButton("üí∞ –û–±—â–∏–π –∏—Ç–æ–≥", callback_data=f"balance:{day_key}"))
    kb.row(types.InlineKeyboardButton("‚ÑπÔ∏è –ò–Ω—Ñ–æ", callback_data="info"))
    return kb


def render_day_window(chat_id, day_key):
    """–†–µ–Ω–¥–µ—Ä–∏—Ç –æ–∫–Ω–æ –¥–Ω—è ‚Äî —Å–ø–∏—Å–æ–∫ –∑–∞–ø–∏—Å–µ–π –∏ –∏—Ç–æ–≥"""
    chat = data["chats"].setdefault(str(chat_id), {"records": {}})
    recs = chat["records"].get(day_key, [])
    total = sum(r.get("amount", 0) for r in recs)
    lines = [f"üìÖ <b>{day_key}</b>"]
    for r in recs:
        a = r.get("amount", 0)
        sign = "‚ûï" if a >= 0 else "‚ûñ"
        lines.append(f"{sign} {fmt_num(a)} ‚Äî {html.escape(r.get('comment',''))}")
    lines.append("")
    lines.append(f"<b>üí∞ –ò—Ç–æ–≥–æ:</b> {fmt_num(total)}")
    return "\n".join(lines), build_main_menu(chat_id, day_key)


def update_day_window(chat_id, message_id, day_key):
    """–û–±–Ω–æ–≤–ª—è–µ—Ç –æ–∫–Ω–æ –¥–Ω—è (–µ—Å–ª–∏ –∫–æ–Ω—Ç–µ–Ω—Ç –∏–∑–º–µ–Ω–∏–ª—Å—è)"""
    try:
        text, kb = render_day_window(chat_id, day_key)
        bot.edit_message_text(
            text, chat_id=chat_id, message_id=message_id,
            reply_markup=kb, parse_mode="HTML"
        )
    except Exception as e:
        log_warn(f"update_day_window: {e}")

# ============================================================
# üìÜ –ù–ê–í–ò–ì–ê–¶–ò–Ø –ú–ï–ñ–î–£ –î–ù–Ø–ú–ò
# ============================================================
def shift_date_key(day_key, delta):
    try:
        d = datetime.strptime(day_key, "%Y-%m-%d")
        new = d + timedelta(days=delta)
        return new.strftime("%Y-%m-%d")
    except:
        return today_key()

@bot.callback_query_handler(func=lambda c: c.data.startswith("prev:"))
def handle_prev(call):
    day = call.data.split(":", 1)[1]
    new_day = shift_date_key(day, -1)
    txt, kb = render_day_window(call.message.chat.id, new_day)
    bot.edit_message_text(txt, call.message.chat.id, call.message.id, reply_markup=kb, parse_mode="HTML")

@bot.callback_query_handler(func=lambda c: c.data.startswith("next:"))
def handle_next(call):
    day = call.data.split(":", 1)[1]
    new_day = shift_date_key(day, 1)
    txt, kb = render_day_window(call.message.chat.id, new_day)
    bot.edit_message_text(txt, call.message.chat.id, call.message.id, reply_markup=kb, parse_mode="HTML")

@bot.callback_query_handler(func=lambda c: c.data == "today")
def handle_today(call):
    txt, kb = render_day_window(call.message.chat.id, today_key())
    bot.edit_message_text(txt, call.message.chat.id, call.message.id, reply_markup=kb, parse_mode="HTML")

# ============================================================
# üí∞ –û–ë–©–ò–ô –ò–¢–û–ì (–ü–û –¢–ï–ö–£–©–ï–ú–£ –ß–ê–¢–£)
# ============================================================
@bot.callback_query_handler(func=lambda c: c.data.startswith("balance:"))
def handle_balance(call):
    chat_id = call.message.chat.id
    total = calculate_total_for_chat(chat_id)
    bot.answer_callback_query(call.id, text=f"üí∞ –û–±—â–∏–π –∏—Ç–æ–≥: {fmt_num(total)}", show_alert=True)

# ============================================================
# ‚ÑπÔ∏è –ò–ù–§–û–†–ú–ê–¶–ò–û–ù–ù–û–ï –û–ö–ù–û
# ============================================================
def build_info_keyboard():
    kb = types.InlineKeyboardMarkup()
    kb.row(types.InlineKeyboardButton("üìú –ö–æ–º–∞–Ω–¥—ã", callback_data="help"))
    kb.row(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data="back_info"))
    return kb

@bot.callback_query_handler(func=lambda c: c.data == "info")
def show_info(call):
    text = (
        "<b>üí° –§–∏–Ω–∞–Ω—Å–æ–≤—ã–π –±–æ—Ç</b>\n\n"
        "‚Ä¢ –î–æ–±–∞–≤–ª—è–π—Ç–µ —Ä–∞—Å—Ö–æ–¥—ã –∏ –¥–æ—Ö–æ–¥—ã –ø–æ –¥–Ω—è–º\n"
        "‚Ä¢ –ù–∞–≤–∏–≥–∞—Ü–∏—è: ‚¨ÖÔ∏è ‚û°Ô∏è / üìÖ –°–µ–≥–æ–¥–Ω—è / üìÜ –í—ã–±–æ—Ä –¥–∞—Ç—ã\n"
        "‚Ä¢ –û—Ç—á—ë—Ç: üí∞ –û–±—â–∏–π –∏—Ç–æ–≥\n"
        "‚Ä¢ –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ: /–ø–æ–µ—Ö–∞–ª–∏–§–û123/\n\n"
        "üß≠ –í–µ—Ä—Å–∏—è: 9.8.6-fo_6+GDriveOnly (UI-full + –ø–µ—Ä–µ—Å—ã–ª–∫–∞)"
    )
    bot.edit_message_text(text, call.message.chat.id, call.message.id,
                          reply_markup=build_info_keyboard(), parse_mode="HTML")

@bot.callback_query_handler(func=lambda c: c.data == "back_info")
def back_info(call):
    day_key = today_key()
    txt, kb = render_day_window(call.message.chat.id, day_key)
    bot.edit_message_text(txt, call.message.chat.id, call.message.id, reply_markup=kb, parse_mode="HTML")
# ============================================================
# üß∞ –°–û–°–¢–û–Ø–ù–ò–Ø –†–ï–î–ê–ö–¢–ò–†–û–í–ê–ù–ò–Ø –ò –¢–ê–ô–ú–ê–£–¢ 30 –°–ï–ö
# ============================================================

# –•—Ä–∞–Ω–∏–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ –ø–æ chat_id: {"mode": "...", "day": "...", "rid": int|None, "timer": Timer|None}
edit_states = {}

def _clear_edit_state(chat_id: int):
    st = edit_states.pop(chat_id, None)
    if st and st.get("timer"):
        try: st["timer"].cancel()
        except: pass

def _start_edit_timeout(chat_id: int, day_key: str, message_id: int = None, seconds: int = 30):
    # –ê–≤—Ç–æ-–æ—Ç–º–µ–Ω–∞ —Ä–µ–∂–∏–º–∞ –∏ –≤–æ–∑–≤—Ä–∞—Ç –≤ –≥–ª–∞–≤–Ω–æ–µ –æ–∫–Ω–æ
    def _timeout():
        try:
            _clear_edit_state(chat_id)
            txt, kb = render_day_window(chat_id, day_key)
            if message_id:
                try:
                    bot.edit_message_text(txt, chat_id, message_id, reply_markup=kb, parse_mode="HTML")
                except Exception:
                    bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")
            else:
                bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")
        except Exception as e:
            log_warn(f"edit timeout restore ui: {e}")

    t = threading.Timer(seconds, _timeout)
    t.daemon = True
    t.start()
    edit_states.setdefault(chat_id, {}).update({"timer": t})

# ============================================================
# üíæ –°–ù–ò–ú–û–ö –î–ê–ù–ù–´–• –ö–û–ù–ö–†–ï–¢–ù–û–ì–û –ß–ê–¢–ê –î–õ–Ø DRIVE
# ============================================================

def save_chat_snapshot_and_backup(chat_id: int):
    """–ü–∏—à–µ–º data_<chat_id>.json + CSV –∏ –≥—Ä—É–∑–∏–º –æ–±–∞ –Ω–∞ Drive.
       –í–ê–ñ–ù–û: –≤—ã–∑—ã–≤–∞—Ç—å –ü–û–°–õ–ï –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –æ–∫–Ω–∞."""
    try:
        # JSON-—Å–Ω–∏–º–æ–∫ —Ç–æ–ª—å–∫–æ –¥–∞–Ω–Ω—ã—Ö —ç—Ç–æ–≥–æ —á–∞—Ç–∞
        snap_name = f"data_{chat_id}.json"
        chat_blob = {
            "chat_id": chat_id,
            "records": data["chats"].get(str(chat_id), {}).get("records", {}),
            "next_id": data.get("next_id", 1)
        }
        with open(snap_name, "w", encoding="utf-8") as f:
            json.dump(chat_blob, f, ensure_ascii=False, indent=2)

        # CSV –ø–æ —á–∞—Ç—É
        export_to_csv(chat_id)

        # –ó–∞–≥—Ä—É–∑–∫–∞ –Ω–∞ Drive (–∫–∞–∂–¥—ã–π —Ñ–∞–π–ª –∏–º–µ–Ω—É–µ—Ç—Å—è —Å —Å—É—Ñ—Ñ–∏–∫—Å–æ–º _<chat_id>)
        gdrive_upload(snap_name, chat_id)
        gdrive_upload(f"data_{chat_id}.csv", chat_id)
        log_info(f"‚òÅÔ∏è –ë—ç–∫–∞–ø —á–∞—Ç–∞ {chat_id} –∑–∞–≤–µ—Ä—à—ë–Ω (JSON+CSV).")
    except Exception as e:
        log_err(f"save_chat_snapshot_and_backup: {e}")

# ============================================================
# ‚úèÔ∏è –ú–ï–ù–Æ ¬´–†–ï–î–ê–ö–¢–ò–†–û–í–ê–¢–¨¬ª (+ –ö–ù–û–ü–ö–ê ‚ûï –î–û–ë–ê–í–ò–¢–¨)
# ============================================================

def build_edit_menu(day_key: str):
    kb = types.InlineKeyboardMarkup(row_width=1)
    kb.add(types.InlineKeyboardButton("‚ûï –î–æ–±–∞–≤–∏—Ç—å", callback_data=f"e:add:{day_key}"))
    kb.add(types.InlineKeyboardButton("üìù –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –∑–∞–ø–∏—Å—å", callback_data=f"e:list:{day_key}"))
    kb.add(types.InlineKeyboardButton("üóë –£–¥–∞–ª–∏—Ç—å –∑–∞–ø–∏—Å—å", callback_data=f"e:del:{day_key}"))
    kb.add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"main:{day_key}"))
    return kb

@bot.callback_query_handler(func=lambda c: c.data.startswith("edit:"))
def handle_edit_entry(call):
    """–û—Ç–∫—Ä—ã—Ç—å –º–µ–Ω—é ¬´–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å¬ª –¥–ª—è –≤—ã–±—Ä–∞–Ω–Ω–æ–≥–æ –¥–Ω—è"""
    day_key = call.data.split(":", 1)[1]
    _clear_edit_state(call.message.chat.id)
    try:
        bot.edit_message_text(
            f"‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ: <b>{day_key}</b>",
            call.message.chat.id, call.message.id,
            reply_markup=build_edit_menu(day_key), parse_mode="HTML"
        )
    except Exception as e:
        log_warn(f"handle_edit_entry edit_message_text: {e}")
        bot.send_message(call.message.chat.id, f"‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ: <b>{day_key}</b>",
                         reply_markup=build_edit_menu(day_key), parse_mode="HTML")

# ============================================================
# ‚ûï –î–û–ë–ê–í–ò–¢–¨ –ó–ê–ü–ò–°–¨ (–í –¢–ï–ö–£–©–ï–ú –û–ö–ù–ï –î–ù–Ø)
# ============================================================

@bot.callback_query_handler(func=lambda c: c.data.startswith("e:add:"))
def edit_add_start(call):
    chat_id = call.message.chat.id
    day_key = call.data.split(":")[2]
    _clear_edit_state(chat_id)
    edit_states[chat_id] = {"mode": "add", "day": day_key, "rid": None, "msg_id": call.message.id}
    _start_edit_timeout(chat_id, day_key, call.message.id, seconds=30)
    try:
        bot.edit_message_text(
            f"‚ûï –í–≤–µ–¥–∏—Ç–µ —Å—É–º–º—É –∏ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π –¥–ª—è <b>{day_key}</b>\n\n"
            f"–ü—Ä–∏–º–µ—Ä—ã:\n"
            f"  <code>+1.200 –û–±–µ–¥</code>\n"
            f"  <code>-3 500 –ë–µ–Ω–∑–∏–Ω</code>\n"
            f"  <code>^+^2,000^ –ü–æ–¥–∞—Ä–æ–∫</code>\n\n"
            f"‚è≥ –û–∂–∏–¥–∞—é 30 —Å, –ø–æ—Ç–æ–º –≤–µ—Ä–Ω—É—Å—å –≤ –æ—Å–Ω–æ–≤–Ω–æ–µ –º–µ–Ω—é –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏.",
            chat_id, call.message.id, parse_mode="HTML",
            reply_markup=types.InlineKeyboardMarkup().add(
                types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"main:{day_key}")
            )
        )
    except Exception as e:
        log_warn(f"edit_add_start: {e}")
        bot.send_message(chat_id, "–í–≤–µ–¥–∏—Ç–µ —Å—É–º–º—É –∏ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π‚Ä¶")

@bot.message_handler(func=lambda m: edit_states.get(m.chat.id, {}).get("mode") == "add")
def edit_add_handle_text(msg):
    chat_id = msg.chat.id
    st = edit_states.get(chat_id, {})
    day_key = st.get("day", today_key())
    text = (msg.text or "").strip()

    # –ü–∞—Ä—Å–∏–º ¬´—Å—É–º–º–∞ + –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π¬ª
    parts = text.split(maxsplit=1)
    amount = parse_amount(parts[0]) if parts else 0.0
    comment = parts[1] if len(parts) > 1 else ""

    # –î–æ–±–∞–≤–ª—è–µ–º –∑–∞–ø–∏—Å—å
    chat = data["chats"].setdefault(str(chat_id), {"records": {}})
    recs = chat["records"].setdefault(day_key, [])
    rid = data.get("next_id", 1)
    recs.append({"id": rid, "amount": amount, "comment": comment})
    data["next_id"] = rid + 1
    _save_json(DATA_FILE, data)

    # –°–Ω–∞—á–∞–ª–∞ –æ–±–Ω–æ–≤–ª—è–µ–º –æ–∫–Ω–æ –¥–Ω—è
    txt, kb = render_day_window(chat_id, day_key)
    try:
        if st.get("msg_id"):
            bot.edit_message_text(txt, chat_id, st["msg_id"], reply_markup=kb, parse_mode="HTML")
        else:
            bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")
        bot.send_message(chat_id, "‚úÖ –ó–∞–ø–∏—Å—å –¥–æ–±–∞–≤–ª–µ–Ω–∞.")
    except Exception as e:
        log_warn(f"edit_add_handle_text update ui: {e}")
        bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")

    # –ü–æ—Ç–æ–º –±—ç–∫–∞–ø–∏–º —Ç–æ–ª—å–∫–æ —Ñ–∞–π–ª—ã —ç—Ç–æ–≥–æ —á–∞—Ç–∞
    save_chat_snapshot_and_backup(chat_id)

    # –ó–∞–≤–µ—Ä—à–∞–µ–º —Ä–µ–∂–∏–º
    _clear_edit_state(chat_id)

# ============================================================
# üìù –°–ü–ò–°–û–ö –ó–ê–ü–ò–°–ï–ô –î–õ–Ø –†–ï–î–ê–ö–¢–ò–†–û–í–ê–ù–ò–Ø
# ============================================================

def build_edit_list_keyboard(chat_id: int, day_key: str):
    kb = types.InlineKeyboardMarkup(row_width=1)
    recs = data["chats"].get(str(chat_id), {}).get("records", {}).get(day_key, [])
    if not recs:
        kb.add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"main:{day_key}"))
        return kb
    # –ø–æ—Å–ª–µ–¥–Ω–∏–µ 20
    for r in list(recs)[-20:][::-1]:
        label = f"{'‚ûï' if r['amount']>=0 else '‚ûñ'} {fmt_num(r['amount'])} ‚Äî {r.get('comment','')[:30]}"
        kb.add(types.InlineKeyboardButton(label, callback_data=f"e:open:{day_key}:{r['id']}"))
    kb.add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"main:{day_key}"))
    return kb

@bot.callback_query_handler(func=lambda c: c.data.startswith("e:list:"))
def edit_list_show(call):
    chat_id = call.message.chat.id
    day_key = call.data.split(":")[2]
    _clear_edit_state(chat_id)
    kb = build_edit_list_keyboard(chat_id, day_key)
    text = f"üìù –í—ã–±–µ—Ä–∏—Ç–µ –∑–∞–ø–∏—Å—å –¥–ª—è —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è: <b>{day_key}</b>"
    try:
        bot.edit_message_text(text, chat_id, call.message.id, reply_markup=kb, parse_mode="HTML")
    except Exception as e:
        log_warn(f"edit_list_show: {e}")
        bot.send_message(chat_id, text, reply_markup=kb, parse_mode="HTML")

# ============================================================
# ‚úèÔ∏è –û–¢–ö–†–´–¢–¨ –ó–ê–ü–ò–°–¨ ‚Üí –í–ê–†–ò–ê–ù–¢–´ (–ò–ó–ú–ï–ù–ò–¢–¨ / –£–î–ê–õ–ò–¢–¨)
# ============================================================

def build_record_actions(day_key: str, rid: int):
    kb = types.InlineKeyboardMarkup(row_width=1)
    kb.add(types.InlineKeyboardButton("‚úèÔ∏è –ò–∑–º–µ–Ω–∏—Ç—å –≤—Ä—É—á–Ω—É—é", callback_data=f"e:edit:{day_key}:{rid}"))
    kb.add(types.InlineKeyboardButton("üóë –£–¥–∞–ª–∏—Ç—å", callback_data=f"e:rm:{day_key}:{rid}"))
    kb.add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"e:list:{day_key}"))
    return kb

@bot.callback_query_handler(func=lambda c: c.data.startswith("e:open:"))
def edit_open_record(call):
    chat_id = call.message.chat.id
    _, _, day_key, rid = call.data.split(":")
    rid = int(rid)
    recs = data["chats"].get(str(chat_id), {}).get("records", {}).get(day_key, [])
    rec = next((r for r in recs if r["id"] == rid), None)
    if not rec:
        bot.answer_callback_query(call.id, "–ó–∞–ø–∏—Å—å –Ω–µ –Ω–∞–π–¥–µ–Ω–∞"); return
    text = (
        f"–ó–∞–ø–∏—Å—å <b>#{rid}</b> ({day_key})\n"
        f"{'‚ûï' if rec['amount']>=0 else '‚ûñ'} {fmt_num(rec['amount'])} ‚Äî {html.escape(rec.get('comment',''))}"
    )
    try:
        bot.edit_message_text(text, chat_id, call.message.id,
                              reply_markup=build_record_actions(day_key, rid), parse_mode="HTML")
    except Exception as e:
        log_warn(f"edit_open_record: {e}")
        bot.send_message(chat_id, text, reply_markup=build_record_actions(day_key, rid), parse_mode="HTML")

# ============================================================
# ‚úèÔ∏è –ò–ó–ú–ï–ù–ï–ù–ò–ï –ó–ê–ü–ò–°–ò –í–†–£–ß–ù–£–Æ (30 –°–ï–ö –û–ñ–ò–î–ê–ù–ò–ï)
# ============================================================

@bot.callback_query_handler(func=lambda c: c.data.startswith("e:edit:"))
def edit_manual_start(call):
    chat_id = call.message.chat.id
    _, _, day_key, rid = call.data.split(":")
    rid = int(rid)
    _clear_edit_state(chat_id)
    edit_states[chat_id] = {"mode": "change", "day": day_key, "rid": rid, "msg_id": call.message.id}
    _start_edit_timeout(chat_id, day_key, call.message.id, seconds=30)

    text = (
        f"‚úèÔ∏è –ò–∑–º–µ–Ω–µ–Ω–∏–µ –∑–∞–ø–∏—Å–∏ <b>#{rid}</b> –¥–ª—è <b>{day_key}</b>\n"
        f"–í–≤–µ–¥–∏—Ç–µ <code>—Å—É–º–º—É</code> –∏ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π.\n"
        f"–ù–∞–ø—Ä–∏–º–µ—Ä: <code>-1.250 –û–±–Ω–æ–≤–ª—ë–Ω–Ω–∞—è –∑–∞–º–µ—Ç–∫–∞</code>\n\n"
        f"‚è≥ 30 —Å –Ω–∞ –≤–≤–æ–¥, –∑–∞—Ç–µ–º –≤–µ—Ä–Ω—ë–º—Å—è –≤ –≥–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é."
    )
    kb = types.InlineKeyboardMarkup().add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"e:list:{day_key}"))
    try:
        bot.edit_message_text(text, chat_id, call.message.id, reply_markup=kb, parse_mode="HTML")
    except Exception as e:
        log_warn(f"edit_manual_start: {e}")
        bot.send_message(chat_id, text, reply_markup=kb, parse_mode="HTML")

@bot.message_handler(func=lambda m: edit_states.get(m.chat.id, {}).get("mode") == "change")
def edit_manual_handle(msg):
    chat_id = msg.chat.id
    st = edit_states.get(chat_id, {})
    day_key = st.get("day", today_key())
    rid = st.get("rid")
    text = (msg.text or "").strip()

    # –ü–∞—Ä—Å–∏–º
    parts = text.split(maxsplit=1)
    amount = parse_amount(parts[0]) if parts else 0.0
    comment = parts[1] if len(parts) > 1 else ""

    # –ò—â–µ–º –∏ –º–µ–Ω—è–µ–º –∑–∞–ø–∏—Å—å
    recs = data["chats"].get(str(chat_id), {}).get("records", {}).get(day_key, [])
    for r in recs:
        if r["id"] == rid:
            r["amount"] = amount
            r["comment"] = comment
            break
    _save_json(DATA_FILE, data)

    # 1) –°–Ω–∞—á–∞–ª–∞ –æ–±–Ω–æ–≤–ª—è–µ–º –æ–∫–Ω–æ
    txt, kb = render_day_window(chat_id, day_key)
    try:
        if st.get("msg_id"):
            bot.edit_message_text(txt, chat_id, st["msg_id"], reply_markup=kb, parse_mode="HTML")
        else:
            bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")
        bot.send_message(chat_id, f"‚úÖ –ó–∞–ø–∏—Å—å #{rid} –∏–∑–º–µ–Ω–µ–Ω–∞.")
    except Exception as e:
        log_warn(f"edit_manual_handle update ui: {e}")
        bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")

    # 2) –ó–∞—Ç–µ–º –±—ç–∫–∞–ø —Ç–æ–ª—å–∫–æ —ç—Ç–æ–≥–æ —á–∞—Ç–∞
    save_chat_snapshot_and_backup(chat_id)

    _clear_edit_state(chat_id)

# ============================================================
# üóë –£–î–ê–õ–ï–ù–ò–ï –ó–ê–ü–ò–°–ò (–°–ü–ò–°–û–ö ‚Üí –ü–û–î–¢–í–ï–†–ñ–î–ï–ù–ò–ï ‚Üí –£–î–ê–õ–ï–ù–ò–ï)
# ============================================================

@bot.callback_query_handler(func=lambda c: c.data.startswith("e:del:"))
def delete_list_show(call):
    chat_id = call.message.chat.id
    day_key = call.data.split(":")[2]
    _clear_edit_state(chat_id)
    recs = data["chats"].get(str(chat_id), {}).get("records", {}).get(day_key, [])
    kb = types.InlineKeyboardMarkup(row_width=1)
    if not recs:
        kb.add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"main:{day_key}"))
        try:
            bot.edit_message_text("–ù–µ—Ç –∑–∞–ø–∏—Å–µ–π –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è.", chat_id, call.message.id,
                                  reply_markup=kb, parse_mode="HTML")
        except Exception:
            bot.send_message(chat_id, "–ù–µ—Ç –∑–∞–ø–∏—Å–µ–π –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è.", reply_markup=kb, parse_mode="HTML")
        return
    for r in list(recs)[-20:][::-1]:
        label = f"{'‚ûï' if r['amount']>=0 else '‚ûñ'} {fmt_num(r['amount'])} ‚Äî {r.get('comment','')[:30]}"
        kb.add(types.InlineKeyboardButton(f"–£–¥–∞–ª–∏—Ç—å: {label}", callback_data=f"e:rm:{day_key}:{r['id']}"))
    kb.add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"main:{day_key}"))
    try:
        bot.edit_message_text(f"üóë –£–¥–∞–ª–µ–Ω–∏–µ –∑–∞–ø–∏—Å–∏: <b>{day_key}</b>", chat_id, call.message.id,
                              reply_markup=kb, parse_mode="HTML")
    except Exception as e:
        log_warn(f"delete_list_show: {e}")
        bot.send_message(chat_id, f"üóë –£–¥–∞–ª–µ–Ω–∏–µ –∑–∞–ø–∏—Å–∏: <b>{day_key}</b>", reply_markup=kb, parse_mode="HTML")

def build_delete_confirm(day_key: str, rid: int):
    kb = types.InlineKeyboardMarkup(row_width=2)
    kb.add(
        types.InlineKeyboardButton("‚úÖ –î–∞, —É–¥–∞–ª–∏—Ç—å", callback_data=f"e:rmok:{day_key}:{rid}"),
        types.InlineKeyboardButton("‚ùå –û—Ç–º–µ–Ω–∞", callback_data=f"e:list:{day_key}")
    )
    return kb

@bot.callback_query_handler(func=lambda c: c.data.startswith("e:rm:"))
def delete_confirm(call):
    chat_id = call.message.chat.id
    _, _, day_key, rid = call.data.split(":")
    rid = int(rid)
    text = f"–ü–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç–µ —É–¥–∞–ª–µ–Ω–∏–µ –∑–∞–ø–∏—Å–∏ <b>#{rid}</b> –∑–∞ <b>{day_key}</b>."
    try:
        bot.edit_message_text(text, chat_id, call.message.id,
                              reply_markup=build_delete_confirm(day_key, rid), parse_mode="HTML")
    except Exception as e:
        log_warn(f"delete_confirm: {e}")
        bot.send_message(chat_id, text, reply_markup=build_delete_confirm(day_key, rid), parse_mode="HTML")

@bot.callback_query_handler(func=lambda c: c.data.startswith("e:rmok:"))
def delete_apply(call):
    chat_id = call.message.chat.id
    _, _, day_key, rid = call.data.split(":")
    rid = int(rid)

    recs = data["chats"].get(str(chat_id), {}).get("records", {}).get(day_key, [])
    new_recs = [r for r in recs if r["id"] != rid]
    data["chats"].setdefault(str(chat_id), {}).setdefault("records", {})[day_key] = new_recs
    _save_json(DATA_FILE, data)

    # 1) –°–Ω–∞—á–∞–ª–∞ –æ–±–Ω–æ–≤–ª—è–µ–º –æ–∫–Ω–æ
    txt, kb = render_day_window(chat_id, day_key)
    try:
        bot.edit_message_text("‚úÖ –ó–∞–ø–∏—Å—å —É–¥–∞–ª–µ–Ω–∞.", chat_id, call.message.id)
    except Exception:
        pass
    try:
        bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")
    except Exception as e:
        log_warn(f"delete_apply send window: {e}")

    # 2) –ó–∞—Ç–µ–º –±—ç–∫–∞–ø —Ç–æ–ª—å–∫–æ —ç—Ç–æ–≥–æ —á–∞—Ç–∞
    save_chat_snapshot_and_backup(chat_id)

# ============================================================
# üîô ¬´–ù–ê–ó–ê–î¬ª –í –õ–Æ–ë–û–ú –ú–ï–°–¢–ï –ú–ï–ù–Æ –†–ï–î–ê–ö–¢–ò–†–û–í–ê–ù–ò–Ø
# ============================================================

@bot.callback_query_handler(func=lambda c: c.data.startswith("main:"))
def back_to_main(call):
    chat_id = call.message.chat.id
    day_key = call.data.split(":", 1)[1]
    _clear_edit_state(chat_id)
    txt, kb = render_day_window(chat_id, day_key)
    try:
        bot.edit_message_text(txt, chat_id, call.message.id, reply_markup=kb, parse_mode="HTML")
    except Exception:
        bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")
# ============================================================
# üìÜ –ö–ê–õ–ï–ù–î–ê–†–¨ –ü–û–°–õ–ï–î–ù–ò–• 31 –î–ù–Ø (–° ¬´üîô –ù–ê–ó–ê–î¬ª)
# ============================================================

def build_last31_calendar(current_day: str):
    """
    –ò–Ω–ª–∞–π–Ω-–∫–∞–ª–µ–Ω–¥–∞—Ä—å –ø–æ—Å–ª–µ–¥–Ω–∏—Ö 31 –¥–Ω—è (—Å–µ–≥–æ–¥–Ω—è –∏ 30 –Ω–∞–∑–∞–¥).
    –í—Å–µ–≥–¥–∞ –µ—Å—Ç—å –∫–Ω–æ–ø–∫–∞ ¬´üîô –ù–∞–∑–∞–¥¬ª –∫ –≥–ª–∞–≤–Ω–æ–º—É –æ–∫–Ω—É —Ç–µ–∫—É—â–µ–≥–æ –¥–Ω—è.
    """
    try:
        base = datetime.strptime(current_day, "%Y-%m-%d").date()
    except Exception:
        base = now_local().date()

    days = [base - timedelta(days=i) for i in range(0, 31)]
    kb = types.InlineKeyboardMarkup()
    row = []
    for idx, d in enumerate(days, start=1):
        label = d.strftime("%d/%m")
        dk = d.strftime("%Y-%m-%d")
        row.append(types.InlineKeyboardButton(text=label, callback_data=f"open:{dk}"))
        if idx % 7 == 0:
            kb.row(*row)
            row = []
    if row:
        kb.row(*row)
    kb.row(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"main:{current_day}"))
    return kb

@bot.callback_query_handler(func=lambda c: c.data.startswith("calendar:"))
def show_calendar(call):
    """–ü–æ–∫–∞–∑ –∫–∞–ª–µ–Ω–¥–∞—Ä—è –Ω–∞ 31 –¥–µ–Ω—å –æ—Ç –≤—ã–±—Ä–∞–Ω–Ω–æ–π –¥–∞—Ç—ã"""
    day_key = call.data.split(":", 1)[1]
    try:
        bot.edit_message_text(
            "üìÜ –í—ã–±–µ—Ä–∏—Ç–µ –¥–∞—Ç—É (–ø–æ—Å–ª–µ–¥–Ω–∏–µ 31 –¥–µ–Ω—å):",
            call.message.chat.id, call.message.id,
            reply_markup=build_last31_calendar(day_key)
        )
    except Exception as e:
        log_warn(f"show_calendar edit_message: {e}")
        bot.send_message(call.message.chat.id, "üìÜ –í—ã–±–µ—Ä–∏—Ç–µ –¥–∞—Ç—É (–ø–æ—Å–ª–µ–¥–Ω–∏–µ 31 –¥–µ–Ω—å):",
                         reply_markup=build_last31_calendar(day_key))

@bot.callback_query_handler(func=lambda c: c.data.startswith("open:"))
def open_day_from_calendar(call):
    """–û—Ç–∫—Ä—ã—Ç—å –¥–µ–Ω—å –∏–∑ –∫–∞–ª–µ–Ω–¥–∞—Ä—è"""
    dk = call.data.split(":", 1)[1]
    txt, kb = render_day_window(call.message.chat.id, dk)
    try:
        bot.edit_message_text(txt, call.message.chat.id, call.message.id,
                              reply_markup=kb, parse_mode="HTML")
    except Exception as e:
        log_warn(f"open_day_from_calendar: {e}")
        bot.send_message(call.message.chat.id, txt, reply_markup=kb, parse_mode="HTML")

# ============================================================
# üß≠ –ö–û–ú–ê–ù–î–´ –ù–ê–í–ò–ì–ê–¶–ò–ò /start /view /prev /next
# ============================================================

def _ensure_finance_or_hint(chat_id: int) -> bool:
    """
    –í–æ–∑–≤—Ä–∞—â–∞–µ—Ç True, –µ—Å–ª–∏ —á–∞—Ç –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω –∫–∞–∫ —Ñ–∏–Ω–∞–Ω—Å–æ–≤—ã–π.
    –ï—Å–ª–∏ –Ω–µ—Ç ‚Äî –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç –ø–æ–¥—Å–∫–∞–∑–∫—É —Å –∫–æ–º–∞–Ω–¥–æ–π –∞–∫—Ç–∏–≤–∞—Ü–∏–∏.
    """
    if str(chat_id) in data.get("active_finance", []):
        return True
    bot.send_message(
        chat_id,
        "‚öôÔ∏è –§–∏–Ω–∞–Ω—Å–æ–≤—ã–π —Ä–µ–∂–∏–º –∑–¥–µ—Å—å –µ—â—ë –Ω–µ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω.\n"
        "–û—Ç–ø—Ä–∞–≤—å—Ç–µ –∫–æ–º–∞–Ω–¥—É: <code>/–ø–æ–µ—Ö–∞–ª–∏–§–û123</code>",
        parse_mode="HTML"
    )
    return False

@bot.message_handler(commands=["start", "info"])
def cmd_start(msg):
    """–û—Ç–∫—Ä—ã—Ç—å –æ–∫–Ω–æ —Ç–µ–∫—É—â–µ–≥–æ –¥–Ω—è (–µ—Å–ª–∏ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω —Ä–µ–∂–∏–º)"""
    chat_id = msg.chat.id
    # –†–∞–∑—Ä–µ—à–∏–º /start –ø–æ–∫–∞–∑—ã–≤–∞—Ç—å –æ–∫–Ω–æ –¥–∞–∂–µ –¥–æ –∞–∫—Ç–∏–≤–∞—Ü–∏–∏, —á—Ç–æ–±—ã –±—ã–ª–æ —É–¥–æ–±–Ω–æ
    # –Ω–æ –æ—Å—Ç–∞–≤–∏–º –ø–æ–¥—Å–∫–∞–∑–∫—É –ø—Ä–æ /–ø–æ–µ—Ö–∞–ª–∏–§–û123
    if str(chat_id) not in data.get("active_finance", []):
        bot.send_message(
            chat_id,
            "‚ÑπÔ∏è –ü–æ–¥—Å–∫–∞–∑–∫–∞: –¥–ª—è –ø–æ–ª–Ω–æ—Ü–µ–Ω–Ω–æ–π —Ä–∞–±–æ—Ç—ã –±–æ—Ç–∞ –≤ —ç—Ç–æ–º —á–∞—Ç–µ "
            "–∞–∫—Ç–∏–≤–∏—Ä—É–π—Ç–µ —Ä–µ–∂–∏–º –∫–æ–º–∞–Ω–¥–æ–π <code>/–ø–æ–µ—Ö–∞–ª–∏–§–û123</code>.",
            parse_mode="HTML"
        )
    txt, kb = render_day_window(chat_id, today_key())
    bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")

@bot.message_handler(commands=["view"])
def cmd_view(msg):
    """–û—Ç–∫—Ä—ã—Ç—å —É–∫–∞–∑–∞–Ω–Ω—ã–π –¥–µ–Ω—å: /view YYYY-MM-DD"""
    chat_id = msg.chat.id
    if not _ensure_finance_or_hint(chat_id):
        # –≤—Å—ë —Ä–∞–≤–Ω–æ –ø–æ–∑–≤–æ–ª–∏–º –ø–æ—Å–º–æ—Ç—Ä–µ—Ç—å –æ–∫–Ω–æ, –Ω–æ –±–µ–∑ –∑–∞–ø–∏—Å–∏ –¥–∞–Ω–Ω—ã—Ö
        pass
    parts = (msg.text or "").strip().split()
    if len(parts) < 2:
        bot.send_message(chat_id, "–£–∫–∞–∂–∏—Ç–µ –¥–∞—Ç—É: /view YYYY-MM-DD")
        return
    try:
        d = datetime.strptime(parts[1], "%Y-%m-%d")
        dk = d.strftime("%Y-%m-%d")
    except Exception:
        bot.send_message(chat_id, "–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç. –ü—Ä–∏–º–µ—Ä: /view 2025-11-02")
        return
    txt, kb = render_day_window(chat_id, dk)
    bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")

@bot.message_handler(commands=["prev"])
def cmd_prev(msg):
    """–ü–µ—Ä–µ–π—Ç–∏ –∫ –ø—Ä–µ–¥—ã–¥—É—â–µ–º—É –¥–Ω—é"""
    chat_id = msg.chat.id
    if not _ensure_finance_or_hint(chat_id):
        pass
    # –Ω–∞—Ö–æ–¥–∏–º –¥–µ–Ω—å –ø–æ—Å–ª–µ–¥–Ω–µ–≥–æ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–Ω–æ–≥–æ –æ–∫–Ω–∞ ‚Äî –∏—Å–ø–æ–ª—å–∑—É–µ–º today –∫–∞–∫ –±–∞–∑—É
    base = today_key()
    new_day = shift_date_key(base, -1)
    txt, kb = render_day_window(chat_id, new_day)
    bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")

@bot.message_handler(commands=["next"])
def cmd_next(msg):
    """–ü–µ—Ä–µ–π—Ç–∏ –∫ —Å–ª–µ–¥—É—é—â–µ–º—É –¥–Ω—é"""
    chat_id = msg.chat.id
    if not _ensure_finance_or_hint(chat_id):
        pass
    base = today_key()
    new_day = shift_date_key(base, +1)
    txt, kb = render_day_window(chat_id, new_day)
    bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")

# –î—É–±–ª–∏—Ä—É—é—â–∏–µ –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è inline –∫–Ω–æ–ø–æ–∫ ¬´‚¨ÖÔ∏è/‚û°Ô∏è/üìÖ –°–µ–≥–æ–¥–Ω—è¬ª
@bot.callback_query_handler(func=lambda c: c.data.startswith("prev:"))
def handle_prev_inline(call):
    old = call.data.split(":", 1)[1]
    new_day = shift_date_key(old, -1)
    txt, kb = render_day_window(call.message.chat.id, new_day)
    try:
        bot.edit_message_text(txt, call.message.chat.id, call.message.id,
                              reply_markup=kb, parse_mode="HTML")
    except Exception as e:
        log_warn(f"handle_prev_inline: {e}")
        bot.send_message(call.message.chat.id, txt, reply_markup=kb, parse_mode="HTML")

@bot.callback_query_handler(func=lambda c: c.data.startswith("next:"))
def handle_next_inline(call):
    old = call.data.split(":", 1)[1]
    new_day = shift_date_key(old, +1)
    txt, kb = render_day_window(call.message.chat.id, new_day)
    try:
        bot.edit_message_text(txt, call.message.chat.id, call.message.id,
                              reply_markup=kb, parse_mode="HTML")
    except Exception as e:
        log_warn(f"handle_next_inline: {e}")
        bot.send_message(call.message.chat.id, txt, reply_markup=kb, parse_mode="HTML")

@bot.callback_query_handler(func=lambda c: c.data == "today")
def handle_today_inline(call):
    dk = today_key()
    txt, kb = render_day_window(call.message.chat.id, dk)
    try:
        bot.edit_message_text(txt, call.message.chat.id, call.message.id,
                              reply_markup=kb, parse_mode="HTML")
    except Exception as e:
        log_warn(f"handle_today_inline: {e}")
        bot.send_message(call.message.chat.id, txt, reply_markup=kb, parse_mode="HTML")

# ============================================================
# üîé –†–ê–°–®–ò–†–ï–ù–ù–û–ï –ò–ù–§–û-–û–ö–ù–û (UI-FULL)
# ============================================================

def build_info_full_kb():
    kb = types.InlineKeyboardMarkup(row_width=2)
    kb.add(types.InlineKeyboardButton("üìú –ö–æ–º–∞–Ω–¥—ã", callback_data="help"))
    kb.add(types.InlineKeyboardButton("üìÜ –ö–∞–ª–µ–Ω–¥–∞—Ä—å", callback_data=f"calendar:{today_key()}"))
    kb.add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data="back_info"))
    return kb

@bot.callback_query_handler(func=lambda c: c.data == "help")
def show_help(call):
    text = (
        "<b>–ö–æ–º–∞–Ω–¥—ã</b>\n"
        "/start ‚Äî –æ—Ç–∫—Ä—ã—Ç—å –æ–∫–Ω–æ –∑–∞ —Å–µ–≥–æ–¥–Ω—è\n"
        "/view YYYY-MM-DD ‚Äî –æ—Ç–∫—Ä—ã—Ç—å –¥–∞—Ç—É\n"
        "/prev /next ‚Äî –Ω–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ –¥–Ω—è–º\n"
        "/balance ‚Äî –æ–±—â–∏–π –∏—Ç–æ–≥ –ø–æ —ç—Ç–æ–º—É —á–∞—Ç—É (—á–µ—Ä–µ–∑ –∫–Ω–æ–ø–∫—É)\n"
        "/–ø–æ–µ—Ö–∞–ª–∏–§–û123 ‚Äî –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞—Ç—å —Ñ–∏–Ω–∞–Ω—Å–æ–≤—ã–π —Ä–µ–∂–∏–º –≤ —á–∞—Ç–µ\n\n"
        "üí° –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –∑–∞–ø–∏—Å–µ–π: –æ—Ç–ø—Ä–∞–≤—å—Ç–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –≤–∏–¥–∞\n"
        "<code>+1.200 –ó–∞–≤—Ç—Ä–∞–∫</code> –∏–ª–∏ <code>-3 500 –ë–µ–Ω–∑–∏–Ω</code>\n"
        "–†–∞–∑–¥–µ–ª–∏—Ç–µ–ª–∏: –ø—Ä–æ–±–µ–ª—ã, —Ç–æ—á–∫–∏, –∑–∞–ø—è—Ç—ã–µ, —Å–º–µ—à–∞–Ω–Ω—ã–µ ‚Äî –±–æ—Ç –ø–æ–π–º—ë—Ç."
    )
    try:
        bot.edit_message_text(text, call.message.chat.id, call.message.id,
                              reply_markup=build_info_full_kb(), parse_mode="HTML")
    except Exception as e:
        log_warn(f"show_help: {e}")
        bot.send_message(call.message.chat.id, text, reply_markup=build_info_full_kb(), parse_mode="HTML")
# ============================================================
# üí¨ –í–í–û–î –ó–ê–ü–ò–°–ï–ô –¢–ï–ö–°–¢–û–ú –í –ê–ö–¢–ò–í–ù–û–ú –§–ò–ù–ê–ù–°–û–í–û–ú –ß–ê–¢–ï
# ============================================================

@bot.message_handler(func=lambda m: str(m.chat.id) in data.get("active_finance", []))
def handle_finance_message(msg):
    """–ï—Å–ª–∏ —á–∞—Ç –∞–∫—Ç–∏–≤–µ–Ω ‚Äî –≤–æ—Å–ø—Ä–∏–Ω–∏–º–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –∫–∞–∫ –∑–∞–ø–∏—Å—å (+ –∏–ª–∏ - —Å—É–º–º–∞, –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π)"""
    chat_id = msg.chat.id
    text = (msg.text or "").strip()
    if not text:
        return

    parts = text.split(maxsplit=1)
    if not parts:
        return

    try:
        amount = parse_amount(parts[0])
        comment = parts[1] if len(parts) > 1 else ""
        if amount == 0 and not comment:
            return
    except Exception:
        return

    # –û–ø—Ä–µ–¥–µ–ª—è–µ–º –¥–µ–Ω—å (—Å–µ–≥–æ–¥–Ω—è)
    day_key = today_key()
    chat = data["chats"].setdefault(str(chat_id), {"records": {}})
    recs = chat["records"].setdefault(day_key, [])
    rid = data.get("next_id", 1)
    recs.append({"id": rid, "amount": amount, "comment": comment})
    data["next_id"] = rid + 1
    _save_json(DATA_FILE, data)

    # 1Ô∏è‚É£ –°–Ω–∞—á–∞–ª–∞ –æ–±–Ω–æ–≤–ª—è–µ–º –æ–∫–Ω–æ
    txt, kb = render_day_window(chat_id, day_key)
    try:
        bot.send_message(chat_id, txt, reply_markup=kb, parse_mode="HTML")
    except Exception as e:
        log_warn(f"handle_finance_message UI: {e}")

    # 2Ô∏è‚É£ –ó–∞—Ç–µ–º –¥–µ–ª–∞–µ–º –±—ç–∫–∞–ø —Ç–æ–ª—å–∫–æ –¥–ª—è —ç—Ç–æ–≥–æ —á–∞—Ç–∞
    save_chat_snapshot_and_backup(chat_id)

# ============================================================
# üîÅ –°–ò–°–¢–ï–ú–ê –ü–ï–†–ï–°–´–õ–ö–ò –°–û–û–ë–©–ï–ù–ò–ô (OWNER-ONLY)
# ============================================================

def get_forward_rules():
    return data.setdefault("forward_rules", {})

def save_forward_rules():
    _save_json(DATA_FILE, data)
    if OWNER_ID:
        gdrive_upload(DATA_FILE, OWNER_ID)

def add_forward_rule(src: str, dst: str, two_way: bool = False):
    """–î–æ–±–∞–≤–ª–µ–Ω–∏–µ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è –ø–µ—Ä–µ—Å—ã–ª–∫–∏"""
    rules = get_forward_rules()
    rules.setdefault(src, [])
    if dst not in rules[src]:
        rules[src].append(dst)
    if two_way:
        rules.setdefault(dst, [])
        if src not in rules[dst]:
            rules[dst].append(src)
    save_forward_rules()

def build_forward_menu():
    """–ì–ª–∞–≤–Ω–æ–µ –º–µ–Ω—é –ø–µ—Ä–µ—Å—ã–ª–∫–∏ ‚Äî —Å–ø–∏—Å–æ–∫ –¥–æ—Å—Ç—É–ø–Ω—ã—Ö —á–∞—Ç–æ–≤"""
    kb = types.InlineKeyboardMarkup()
    for cid in data.get("chats", {}):
        kb.add(types.InlineKeyboardButton(cid, callback_data=f"fwsel:{cid}"))
    kb.add(types.InlineKeyboardButton("üóë –û—á–∏—Å—Ç–∏—Ç—å –≤—Å–µ –ø—Ä–∞–≤–∏–ª–∞", callback_data="fwclear"))
    return kb

@bot.message_handler(commands=["–ø–µ—Ä–µ—Å—ã–ª–∫–∞"])
def cmd_forward(msg):
    """–ö–æ–º–∞–Ω–¥–∞ /–ø–µ—Ä–µ—Å—ã–ª–∫–∞ ‚Äî –¥–æ—Å—Ç—É–ø–Ω–∞ —Ç–æ–ª—å–∫–æ OWNER"""
    if str(msg.chat.id) != str(OWNER_ID):
        return
    bot.send_message(msg.chat.id, "üîÅ –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ø–µ—Ä–µ—Å—ã–ª–∫–∏ –º–µ–∂–¥—É —á–∞—Ç–∞–º–∏:", reply_markup=build_forward_menu())

@bot.callback_query_handler(func=lambda c: c.data.startswith("fwsel:"))
def fwsel(call):
    """–í—ã–±–æ—Ä –∏—Å—Ç–æ—á–Ω–∏–∫–∞ –ø–µ—Ä–µ—Å—ã–ª–∫–∏"""
    if str(call.message.chat.id) != str(OWNER_ID):
        return
    src = call.data.split(":", 1)[1]
    kb = types.InlineKeyboardMarkup(row_width=1)
    for cid in data.get("chats", {}):
        if cid == src:
            continue
        kb.add(types.InlineKeyboardButton(f"‚ûú {cid}", callback_data=f"fw1:{src}:{cid}"))
        kb.add(types.InlineKeyboardButton(f"‚áÑ {cid}", callback_data=f"fw2:{src}:{cid}"))
    kb.add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data="fwback"))
    try:
        bot.edit_message_text(f"–í—ã–±–µ—Ä–∏—Ç–µ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –ø–µ—Ä–µ—Å—ã–ª–∫–∏ –¥–ª—è {src}",
                              call.message.chat.id, call.message.id,
                              reply_markup=kb)
    except Exception as e:
        log_warn(f"fwsel: {e}")
        bot.send_message(call.message.chat.id, "–û—à–∏–±–∫–∞ –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è –º–µ–Ω—é –ø–µ—Ä–µ—Å—ã–ª–∫–∏.")

@bot.callback_query_handler(func=lambda c: c.data.startswith(("fw1:", "fw2:")) )
def fw_apply(call):
    """–î–æ–±–∞–≤–ª–µ–Ω–∏–µ –Ω–∞–ø—Ä–∞–≤–ª–µ–Ω–∏—è –ø–µ—Ä–µ—Å—ã–ª–∫–∏"""
    if str(call.message.chat.id) != str(OWNER_ID):
        return
    parts = call.data.split(":")
    two_way = parts[0] == "fw2"
    src, dst = parts[1], parts[2]
    add_forward_rule(src, dst, two_way)
    bot.answer_callback_query(call.id, "‚úÖ –ü—Ä–∞–≤–∏–ª–æ –ø–µ—Ä–µ—Å—ã–ª–∫–∏ –¥–æ–±–∞–≤–ª–µ–Ω–æ")
    try:
        bot.edit_message_text(f"‚úÖ –ü–µ—Ä–µ—Å—ã–ª–∫–∞ –Ω–∞—Å—Ç—Ä–æ–µ–Ω–∞: {src} ‚ûú {dst}{' (‚áÑ –¥–≤—É—Ö—Å—Ç–æ—Ä–æ–Ω–Ω—è—è)' if two_way else ''}",
                              call.message.chat.id, call.message.id)
    except Exception:
        bot.send_message(call.message.chat.id, f"‚úÖ –ü–µ—Ä–µ—Å—ã–ª–∫–∞ {src} ‚ûú {dst} –¥–æ–±–∞–≤–ª–µ–Ω–∞")

@bot.callback_query_handler(func=lambda c: c.data == "fwclear")
def fw_clear_all(call):
    """–û—á–∏—Å—Ç–∫–∞ –≤—Å–µ—Ö –ø—Ä–∞–≤–∏–ª –ø–µ—Ä–µ—Å—ã–ª–∫–∏"""
    if str(call.message.chat.id) != str(OWNER_ID):
        return
    data["forward_rules"] = {}
    save_forward_rules()
    bot.answer_callback_query(call.id, "‚ôªÔ∏è –í—Å–µ –ø—Ä–∞–≤–∏–ª–∞ –ø–µ—Ä–µ—Å—ã–ª–∫–∏ —É–¥–∞–ª–µ–Ω—ã")
    bot.send_message(call.message.chat.id, "‚ôªÔ∏è –í—Å–µ –ø—Ä–∞–≤–∏–ª–∞ –ø–µ—Ä–µ—Å—ã–ª–∫–∏ —Å–±—Ä–æ—à–µ–Ω—ã.")

@bot.callback_query_handler(func=lambda c: c.data == "fwback")
def fw_back(call):
    """–í–æ–∑–≤—Ä–∞—Ç –∫ –≥–ª–∞–≤–Ω–æ–º—É –º–µ–Ω—é –ø–µ—Ä–µ—Å—ã–ª–∫–∏"""
    if str(call.message.chat.id) != str(OWNER_ID):
        return
    try:
        bot.edit_message_text("üîÅ –ù–∞—Å—Ç—Ä–æ–π–∫–∞ –ø–µ—Ä–µ—Å—ã–ª–∫–∏ –º–µ–∂–¥—É —á–∞—Ç–∞–º–∏:",
                              call.message.chat.id, call.message.id,
                              reply_markup=build_forward_menu())
    except Exception:
        bot.send_message(call.message.chat.id, "üîÅ –ú–µ–Ω—é –ø–µ—Ä–µ—Å—ã–ª–∫–∏:", reply_markup=build_forward_menu())

# ============================================================
# üîí –ö–û–ù–§–ò–î–ï–ù–¶–ò–ê–õ–¨–ù–ê–Ø –ü–ï–†–ï–°–´–õ–ö–ê –°–û–û–ë–©–ï–ù–ò–ô
# ============================================================

@bot.message_handler(content_types=["text", "photo", "video", "document", "audio", "voice", "sticker"])
def forward_confidential(msg):
    """
    –ö–æ–Ω—Ñ–∏–¥–µ–Ω—Ü–∏–∞–ª—å–Ω–∞—è –ø–µ—Ä–µ—Å—ã–ª–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏–π –±–µ–∑ —Ä–∞—Å–∫—Ä—ã—Ç–∏—è –∏–º–µ–Ω–∏/–Ω–∏–∫–∞.
    –†–∞–±–æ—Ç–∞–µ—Ç —Ç–æ–ª—å–∫–æ –µ—Å–ª–∏ —á–∞—Ç –Ω–µ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω –∫–∞–∫ —Ñ–∏–Ω–∞–Ω—Å–æ–≤—ã–π.
    """
    cid = str(msg.chat.id)
    if cid in data.get("active_finance", []):
        return  # –í –∞–∫—Ç–∏–≤–Ω—ã—Ö —á–∞—Ç–∞—Ö –ø–µ—Ä–µ—Å—ã–ª–∫–∞ –Ω–µ –ø—Ä–∏–º–µ–Ω—è–µ—Ç—Å—è

    rules = data.get("forward_rules", {})
    if cid not in rules:
        return

    for tgt in rules[cid]:
        try:
            # –¢–µ–∫—Å—Ç
            if msg.text:
                bot.send_message(int(tgt), msg.text)
            # –§–æ—Ç–æ
            elif msg.photo:
                bot.send_photo(int(tgt), msg.photo[-1].file_id, caption=msg.caption or "")
            # –í–∏–¥–µ–æ
            elif msg.video:
                bot.send_video(int(tgt), msg.video.file_id, caption=msg.caption or "")
            # –î–æ–∫—É–º–µ–Ω—Ç
            elif msg.document:
                bot.send_document(int(tgt), msg.document.file_id, caption=msg.caption or "")
            # –ì–æ–ª–æ—Å / –∞—É–¥–∏–æ
            elif msg.voice:
                bot.send_voice(int(tgt), msg.voice.file_id)
            elif msg.audio:
                bot.send_audio(int(tgt), msg.audio.file_id)
            # –°—Ç–∏–∫–µ—Ä—ã
            elif msg.sticker:
                bot.send_sticker(int(tgt), msg.sticker.file_id)
        except Exception as e:
            log_err(f"forward_confidential {cid}->{tgt}: {e}")

# ============================================================
# üîé –ü–†–û–°–ú–û–¢–† –°–£–©–ï–°–¢–í–£–Æ–©–ò–• –ü–†–ê–í–ò–õ (–¢–û–õ–¨–ö–û OWNER)
# ============================================================

@bot.message_handler(commands=["fwlist"])
def fw_list(msg):
    if str(msg.chat.id) != str(OWNER_ID):
        return
    rules = data.get("forward_rules", {})
    if not rules:
        bot.send_message(msg.chat.id, "‚ùå –ù–µ—Ç –∞–∫—Ç–∏–≤–Ω—ã—Ö –ø—Ä–∞–≤–∏–ª –ø–µ—Ä–µ—Å—ã–ª–∫–∏.")
        return
    lines = ["üìã <b>–ê–∫—Ç–∏–≤–Ω—ã–µ –º–∞—Ä—à—Ä—É—Ç—ã –ø–µ—Ä–µ—Å—ã–ª–∫–∏:</b>"]
    for src, dsts in rules.items():
        for d in dsts:
            lines.append(f"‚Ä¢ {src} ‚ûú {d}")
    bot.send_message(msg.chat.id, "\n".join(lines), parse_mode="HTML")
# ============================================================
# üöÄ –ê–ö–¢–ò–í–ê–¶–ò–Ø –§–ò–ù–ê–ù–°–û–í–û–ì–û –†–ï–ñ–ò–ú–ê
# ============================================================

@bot.message_handler(commands=["–ø–æ–µ—Ö–∞–ª–∏–§–û123"])
def activate_finance_mode(msg):
    """
    –ê–∫—Ç–∏–≤–∞—Ü–∏—è —Ñ–∏–Ω–∞–Ω—Å–æ–≤–æ–≥–æ —Ä–µ–∂–∏–º–∞ –≤ —Ç–µ–∫—É—â–µ–º —á–∞—Ç–µ.
    –ü–æ—Å–ª–µ –∞–∫—Ç–∏–≤–∞—Ü–∏–∏ –±–æ—Ç –Ω–∞—á–∏–Ω–∞–µ—Ç –≤–µ—Å—Ç–∏ —É—á—ë—Ç –∏ –ø—Ä–∏–Ω–∏–º–∞—Ç—å –∑–∞–ø–∏—Å–∏.
    """
    cid = str(msg.chat.id)
    if cid not in data["active_finance"]:
        data["active_finance"].append(cid)
        _save_json(DATA_FILE, data)
        save_chat_snapshot_and_backup(msg.chat.id)
        bot.send_message(cid, "‚úÖ –§–∏–Ω–∞–Ω—Å–æ–≤—ã–π —Ä–µ–∂–∏–º –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω! –ú–æ–∂–Ω–æ –¥–æ–±–∞–≤–ª—è—Ç—å –∑–∞–ø–∏—Å–∏.")
    else:
        bot.send_message(cid, "‚öôÔ∏è –§–∏–Ω–∞–Ω—Å–æ–≤—ã–π —Ä–µ–∂–∏–º —É–∂–µ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω.")

@bot.message_handler(commands=["stop–§–û"])
def deactivate_finance_mode(msg):
    """–û—Ç–∫–ª—é—á–∞–µ—Ç —Ñ–∏–Ω–∞–Ω—Å–æ–≤—ã–π —Ä–µ–∂–∏–º –¥–ª—è —Ç–µ–∫—É—â–µ–≥–æ —á–∞—Ç–∞"""
    cid = str(msg.chat.id)
    if cid in data["active_finance"]:
        data["active_finance"].remove(cid)
        _save_json(DATA_FILE, data)
        bot.send_message(cid, "‚è∏ –§–∏–Ω–∞–Ω—Å–æ–≤—ã–π —Ä–µ–∂–∏–º –¥–µ–∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω.")
    else:
        bot.send_message(cid, "‚ÑπÔ∏è –≠—Ç–æ—Ç —á–∞—Ç –Ω–µ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω –∫–∞–∫ —Ñ–∏–Ω–∞–Ω—Å–æ–≤—ã–π.")

# ============================================================
# üåê KEEP-ALIVE
# ============================================================

def keep_alive():
    """–ü–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–∏–π –ø–∏–Ω–≥ Render –¥–ª—è –ø—Ä–µ–¥–æ—Ç–≤—Ä–∞—â–µ–Ω–∏—è —Å–Ω–∞"""
    while True:
        try:
            requests.get(APP_URL + "/ping", timeout=10)
            log_info("üåê Keep-alive ping –≤—ã–ø–æ–ª–Ω–µ–Ω.")
        except Exception as e:
            log_warn(f"keep_alive ping: {e}")
        time.sleep(KEEP_ALIVE_INTERVAL_SECONDS)

@app.route("/ping")
def ping():
    """–û—Ç–≤–µ—Ç –Ω–∞ keep-alive –ø–∏–Ω–≥"""
    return "pong", 200

# ============================================================
# üåç WEBHOOK-–°–ï–†–í–ï–† –ù–ê FLASK
# ============================================================

@app.route(f"/{TOKEN}", methods=["POST"])
def webhook():
    """–ü–æ–ª—É—á–∞–µ—Ç –∞–ø–¥–µ–π—Ç—ã –æ—Ç Telegram"""
    try:
        update = telebot.types.Update.de_json(request.stream.read().decode("utf-8"))
        bot.process_new_updates([update])
    except Exception as e:
        log_err(f"webhook error: {e}")
    return "!", 200

@app.route("/")
def index():
    """–ì–ª–∞–≤–Ω–∞—è —Å—Ç—Ä–∞–Ω–∏—Ü–∞"""
    return f"‚úÖ Bot OK ‚Äî {VERSION}", 200

def start_webhook():
    """–ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è webhook –∏ –∑–∞–ø—É—Å–∫ Flask-—Å–µ—Ä–≤–µ—Ä–∞"""
    try:
        bot.remove_webhook()
        time.sleep(1)
        bot.set_webhook(url=f"{APP_URL}/{TOKEN}")
        log_info("üåê Webhook —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω —É—Å–ø–µ—à–Ω–æ.")
        app.run(host="0.0.0.0", port=PORT, threaded=True)
    except Exception as e:
        log_err(f"start_webhook: {e}")

# ============================================================
# üèÅ –¢–û–ß–ö–ê –í–•–û–î–ê
# ============================================================

if __name__ == "__main__":
    # –ó–∞–ø—É—Å–∫–∞–µ–º keep-alive –≤ –æ—Ç–¥–µ–ª—å–Ω–æ–º –ø–æ—Ç–æ–∫–µ
    threading.Thread(target=keep_alive, daemon=True).start()

    # –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –¥–∞–Ω–Ω—ã—Ö –ø—Ä–∏ —Å—Ç–∞—Ä—Ç–µ (–µ—Å–ª–∏ —É —á–∞—Ç–∞ –µ—Å—Ç—å —Ñ–∞–π–ª—ã)
    try:
        for cid in data.get("chats", {}):
            gdrive_download(f"data_{cid}.json", cid)
            gdrive_download(f"data_{cid}.csv", cid)
        log_info("‚úÖ –î–∞–Ω–Ω—ã–µ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ.")
    except Exception as e:
        log_warn(f"restore_on_start: {e}")

    # –ó–∞–ø—É—Å–∫ webhook-—Å–µ—Ä–≤–µ—Ä–∞
    start_webhook()