# Callback Ð¾Ð±Ñ€Ð°Ð±Ð¾Ñ‚Ñ‡Ð¸Ðº
# -----------------------------
@bot.callback_query_handler(func=lambda c: True)
def handle_callback(call):
    chat_id = call.message.chat.id
    store = get_chat_store(chat_id)
    today_key = get_today_key()
    day_records = store.get("daily_records", {}).get(today_key, [])
    today_msgs = data.setdefault("active_messages", {}).setdefault(today_key, {})
    active_id = today_msgs.get(str(chat_id))

    # ÐžÐ±Ñ€Ð°Ð±Ð¾Ñ‚Ñ‡Ð¸Ðº ÐºÐ½Ð¾Ð¿Ð¾Ðº Ñ€ÐµÐ´Ð°ÐºÑ‚Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ñ Ð¸ Ð¿Ð¾Ð´Ð¼ÐµÐ½ÑŽ
    if call.data == "btn_reset":
        if active_id:
            try:
                kb = types.InlineKeyboardMarkup(row_width=2)
                kb.row(
                    types.InlineKeyboardButton("âœ… Ð”Ð°, Ð¾Ð±Ð½ÑƒÐ»Ð¸Ñ‚ÑŒ", callback_data="confirm_reset"),
                    types.InlineKeyboardButton("âŒ ÐžÑ‚Ð¼ÐµÐ½Ð°", callback_data="cancel_reset")
                )
                bot.edit_message_text("âš ï¸ Ð’Ñ‹ ÑƒÐ²ÐµÑ€ÐµÐ½Ñ‹, Ñ‡Ñ‚Ð¾ Ñ…Ð¾Ñ‚Ð¸Ñ‚Ðµ Ð¾Ð±Ð½ÑƒÐ»Ð¸Ñ‚ÑŒ Ð²ÑÐµ Ð´Ð°Ð½Ð½Ñ‹Ðµ ÑÑ‚Ð¾Ð³Ð¾ Ñ‡Ð°Ñ‚Ð°? Ð­Ñ‚Ð¾ Ð´ÐµÐ¹ÑÑ‚Ð²Ð¸Ðµ Ð½ÐµÐ»ÑŒÐ·Ñ Ð±ÑƒÐ´ÐµÑ‚ Ð¾Ñ‚Ð¼ÐµÐ½Ð¸Ñ‚ÑŒ.", chat_id, active_id, reply_markup=kb)
            except:
                pass
        bot.answer_callback_query(call.id)
        return

    if call.data == "confirm_reset":
        store["records"] = []
        store["daily_records"] = {}
        store["balance"] = 0
        data["records"] = [x for x in data.get("records", []) if x.get("owner") != chat_id]
        try:
            data["overall_balance"] = sum([x["amount"] for x in data.get("records", [])])
        except:
            data["overall_balance"] = 0
        save_data(data)
        update_or_send_today_window(chat_id)
        bot.answer_callback_query(call.id, "Ð”Ð°Ð½Ð½Ñ‹Ðµ ÑÐ±Ñ€Ð¾ÑˆÐµÐ½Ñ‹ ðŸ§¹")
        return

    if call.data == "cancel_reset":
        update_or_send_today_window(chat_id)
        bot.answer_callback_query(call.id, "ÐžÑ‚Ð¼ÐµÐ½Ð°")
        return

    # ÐžÐ±Ð½Ð¾Ð²Ð¸Ñ‚ÑŒ/Ð¸Ð½Ñ„Ð¾/Ñ„Ð¾Ñ€Ð²Ð°Ñ€Ð´/Ñ€ÐµÐ´Ð°ÐºÑ‚Ð¸Ñ€Ð¾Ð²Ð°Ð½Ð¸Ðµ
    if call.data.startswith("btn_"):
        update_or_send_today_window(chat_id)
        bot.answer_callback_query(call.id)
        return

    # Ð”Ð°Ð»ÐµÐµ Ð°Ð½Ð°Ð»Ð¾Ð³Ð¸Ñ‡Ð½Ð¾ handle_callback Ð´Ð»Ñ rec_, preset_add_, edit_manual_, edit_delete_, confirm_delete_
    # ...
    # Ð—Ð´ÐµÑÑŒ Ð¿Ð¾Ð»Ð½Ð¾ÑÑ‚ÑŒÑŽ ÐºÐ¾Ð¿Ð¸Ñ€ÑƒÑŽÑ‚ÑÑ Ð¾ÑÑ‚Ð°Ð»ÑŒÐ½Ñ‹Ðµ callback-Ð¾Ð±Ñ€Ð°Ð±Ð¾Ñ‚ÐºÐ¸ Ð¸Ð· Ð¿Ñ€ÐµÐ´Ñ‹Ð´ÑƒÑ‰ÐµÐ³Ð¾ ÐºÐ¾Ð´Ð°
    # Ñ‡Ñ‚Ð¾Ð±Ñ‹ Ð²ÑÐµ ÐºÐ½Ð¾Ð¿ÐºÐ¸ Ñ€Ð°Ð±Ð¾Ñ‚Ð°Ð»Ð¸ ÐºÐ¾Ñ€Ñ€ÐµÐºÑ‚Ð½Ð¾ (Ñ€ÐµÐ´Ð°ÐºÑ‚Ð¸Ñ€Ð¾Ð²Ð°Ñ‚ÑŒ, ÑƒÐ´Ð°Ð»Ð¸Ñ‚ÑŒ, Ð¿Ñ€ÐµÑÐµÑ‚Ñ‹, Ð²Ð²Ð¾Ð´ Ð²Ñ€ÑƒÑ‡Ð½ÑƒÑŽ, Ð½Ð°Ð·Ð°Ð´)

