089 |             json.dump(d or data, f, ensure_ascii=False, indent=2)
090 |     except Exception as e:
091 |         log_error(f"ÐžÑˆÐ¸Ð±ÐºÐ° ÑÐ¾Ñ…Ñ€Ð°Ð½ÐµÐ½Ð¸Ñ data.json: {e}")
