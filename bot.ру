763 | def schedule_daily_window_creation():
764 |     def task():
765 |         last_day = get_today_key()
766 |         while True:
767 |             try:
768 |                 time.sleep(60)
769 |                 current_day = get_today_key()
770 |                 if current_day != last_day:
771 |                     for cid in list(data.get("chats", {}).keys()):
772 |                         try:
773 |                             update_or_send_today_window(int(cid))
774 |                         except Exception as e:
775 |                             log_error(f"ÐžÑˆÐ¸Ð±ÐºÐ° Ð¿Ñ€Ð¸ ÑÐ¾Ð·Ð´Ð°Ð½Ð¸Ð¸ Ð¾ÐºÐ½Ð° Ð½Ð¾Ð²Ð¾Ð³Ð¾ Ð´Ð½Ñ Ð´Ð»Ñ {cid}: {e}")
776 |                     last_day = current_day
777 |             except Exception as e:
778 |                 log_error(f"ÐžÑˆÐ¸Ð±ÐºÐ° Ð² daily loop: {e}")
779 |                 time.sleep(5)
780 |     threading.Thread(target=task, daemon=True).start()
781 |
782 | if __name__ == "__main__":
783 |     set_webhook()
784 |     schedule_daily_window_creation()
785 |     log_info(f"Ð‘Ð¾Ñ‚ Ð¤Ðž Ð²ÐµÑ€ÑÐ¸Ð¸ {VERSION} Ð·Ð°Ð¿ÑƒÑ‰ÐµÐ½")
786 |
787 |     # ÑƒÐ²ÐµÐ´Ð¾Ð¼Ð»ÐµÐ½Ð¸Ðµ Ð²Ð»Ð°Ð´ÐµÐ»ÑŒÑ†Ñƒ (Ð¾Ð¿Ñ†Ð¸Ð¾Ð½Ð°Ð»ÑŒÐ½Ð¾)
788 |     if OWNER_ID:
789 |         try:
790 |             bot.send_message(int(OWNER_ID), f"âœ… Ð‘Ð¾Ñ‚ Ð·Ð°Ð¿ÑƒÑ‰ÐµÐ½ Ð¸ Ñ€Ð°Ð±Ð¾Ñ‚Ð°ÐµÑ‚! (Ð²ÐµÑ€ÑÐ¸Ñ {VERSION})")
791 |         except Exception as e:
792 |             log_error(f"ÐÐµ ÑƒÐ´Ð°Ð»Ð¾ÑÑŒ Ð¾Ñ‚Ð¿Ñ€Ð°Ð²Ð¸Ñ‚ÑŒ ÑÐ¾Ð¾Ð±Ñ‰ÐµÐ½Ð¸Ðµ Ð¾ Ð·Ð°Ð¿ÑƒÑÐºÐµ: {e}")
793 |
794 |     app.run(host="0.0.0.0", port=PORT)