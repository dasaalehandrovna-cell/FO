070 | def load_data():
071 |     if os.path.exists(DATA_FILE):
072 |         try:
073 |             with open(DATA_FILE, "r", encoding="utf-8") as f:
074 |                 d = json.load(f)
075 |         except Exception as e:
076 |             log_error(f"ÐžÑˆÐ¸Ð±ÐºÐ° Ñ‡Ñ‚ÐµÐ½Ð¸Ñ {DATA_FILE}: {e}")
077 |             d = default_data()
078 |     else:
079 |         d = default_data()
080 |     base = default_data()
081 |     for k, v in base.items():
082 |         if k not in d:
083 |             d[k] = v
084 |     return d
085 |
086 | def save_data(d=None):
087 |     try:
