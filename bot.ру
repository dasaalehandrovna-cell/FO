@bot.message_handler(commands=["start"])
def cmd_start(msg):
    update_or_send_today_window(msg.chat.id)
    # ÑƒÐ²ÐµÐ´Ð¾Ð¼Ð»ÐµÐ½Ð¸Ðµ Ð² Ñ‚Ð¾Ð¼ Ð¶Ðµ Ð°ÐºÑ‚Ð¸Ð²Ð½Ð¾Ð¼ Ð¾ÐºÐ½Ðµ + Ð¾Ñ‚Ð´ÐµÐ»ÑŒÐ½Ð¾Ðµ ÐºÑ€Ð°Ñ‚ÐºÐ¾Ðµ Ð¿Ð¾Ð´Ñ‚Ð²ÐµÑ€Ð¶Ð´ÐµÐ½Ð¸Ðµ
    send_or_edit(msg.chat.id, f"âœ… ÐžÐºÐ½Ð¾ ÑÐ¾Ð·Ð´Ð°Ð½Ð¾/Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¾ â€” Ð²ÐµÑ€ÑÐ¸Ñ {VERSION}", reply_markup=build_main_keyboard(msg.chat.id))
    try:
        bot.send_message(msg.chat.id, f"âœ… ÐžÐºÐ½Ð¾ ÑÐ¾Ð·Ð´Ð°Ð½Ð¾/Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¾ â€” Ð²ÐµÑ€ÑÐ¸Ñ {VERSION}")
    except:
        pass

@bot.message_handler(commands=["balance"])
