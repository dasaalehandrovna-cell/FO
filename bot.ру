# -----------------------------
# ‚è±Ô∏è –í—Ä–µ–º—è –∏ —á–∏—Å–ª–∞
# -----------------------------
def now_local() -> datetime: return datetime.now(TZ)
def today_key() -> str: return now_local().strftime("%Y-%m-%d")
def parse_date_key(s: str):
    try: return datetime.strptime(s, "%Y-%m-%d").date()
    except: return None
def shift_date_key(day_key: str, days: int) -> str:
    d = parse_date_key(day_key) or now_local().date()
    return (d + timedelta(days=days)).strftime("%Y-%m-%d")

#üîÅ –§–æ—Ä–º–∞—Ç —á–∏—Å–µ–ª
def fmt_num(value):
    try:
        s = f"{float(value):,.2f}".replace(",", "X").replace(".", ",").replace("X", ".")
        return s
    except Exception:
        return str(value)

# -----------------------------
# üîÅ –ê–≤—Ç–æ-—É–¥–≤–æ–µ–Ω–∏–µ –∏–Ω—Ñ–æ-—Å–æ–æ–±—â–µ–Ω–∏–π
# -----------------------------
def auto_double_message(chat_id, text):
    # ‚ö†Ô∏è –ù–µ –¥—É–±–ª–∏—Ä—É–µ–º —Å–∏—Å—Ç–µ–º–Ω—ã–µ —Å–æ–æ–±—â–µ–Ω–∏—è –∑–∞–ø—É—Å–∫–∞ –∏ –∞–∫—Ç–∏–≤–∞—Ü–∏–∏ —Ä–µ–∂–∏–º–∞
    if "–±–æ—Ç –∑–∞–ø—É—â–µ–Ω" in (text or "").lower() or "—Ñ–∏–Ω–∞–Ω—Å–æ–≤—ã–π —Ä–µ–∂–∏–º –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω" in (text or "").lower():
        return
    def delayed():
        time.sleep(30)
        try:
            bot.send_message(chat_id, text, parse_mode="HTML")
        except Exception as e:
            log_error(f"auto_double_message: {e}")
    threading.Thread(target=delayed, daemon=True).start()

def send_info(chat_id, text):
    try:
        bot.send_message(chat_id, text, parse_mode="HTML")
        #üî¥auto_double_message(chat_id, text)
    except Exception as e:
        log_error(f"send_info: {e}")

def send_temp_message(chat_id, text, delay=5):
    msg = bot.send_message(chat_id, text)
    threading.Timer(delay, lambda: bot.delete_message(chat_id, msg.message_id)).start()

# ---------- JSON/CSV ----------
def _load_json(path, fallback):
    try:
        if not os.path.exists(path) or os.path.getsize(path) == 0:
            log_info(f"‚ö†Ô∏è {path} –ø—É—Å—Ç –∏–ª–∏ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç ‚Äî —Å–æ–∑–¥–∞—é –Ω–æ–≤—ã–π —Ñ–∞–π–ª.")
            _save_json(path, fallback)
            return fallback
        with open(path, "r", encoding="utf-8") as f:
            return json.load(f)
    except Exception as e:
        log_error(f"_load_json: {path}: {e}")
        _save_json(path, fallback)
        return fallback

def _save_json(path, payload):
    try:
        with open(path, "w", encoding="utf-8") as f:
            json.dump(payload, f, ensure_ascii=False, indent=2)
    except Exception as e:
        log_error(f"_save_json: {path}: {e}")

def default_data():
    return {
        "overall_balance": 0,
       # "records": [],
        "chats": {},
        "active_messages": {},
        "next_id": 1
    }

def load_data():
    d = _load_json(DATA_FILE, default_data())
    base = default_data()
    for k, v in base.items():
        if k not in d:
            d[k] = v
    return d

# ‚úÖ –í–∞—Ä–∏–∞–Ω—Ç C: forward_rules –∏ known_chats –Ω–µ —Ö—Ä–∞–Ω–∏–º –≤ data.json ‚Äî —Ç–æ–ª—å–∫–æ —Ñ–∏–Ω.–¥–∞–Ω–Ω—ã–µ
def save_data(d):
    try:
        # –î–µ–ª–∞–µ–º –∫–æ–ø–∏—é –±–µ–∑ —Ç–µ—Ö–Ω–∏—á–µ—Å–∫–∏—Ö –ø–æ–ª–µ–π –ø–µ—Ä–µ—Å—ã–ª–∫–∏ –∏ —Å–ø–∏—Å–∫–∞ —á–∞—Ç–æ–≤
        trimmed = dict(d)
        trimmed.pop("forward_rules", None)
        trimmed.pop("known_chats", None)

        _save_json(DATA_FILE, trimmed)
        export_to_csv(d)
        log_info("üíæ –î–∞–Ω–Ω—ã–µ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –ª–æ–∫–∞–ª—å–Ω–æ (–±–µ–∑ forward_rules/known_chats –≤ data.json).")
    except Exception as e:
        log_error(f"save_data: {e}")

# ==========================================================
# üÜï HELPER‚Äô–´ –î–õ–Ø –í–õ–ê–î–ï–õ–¨–¶–ê: –≥–¥–µ –ª–µ–∂–∞—Ç –ø—Ä–∞–≤–∏–ª–∞ –ø–µ—Ä–µ—Å—ã–ª–∫–∏
# ==========================================================
def _owner_data_file() -> str | None:
    """–ü—É—Ç—å –∫ —Ñ–∞–π–ª—É data_<OWNER_ID>.json (per-chat JSON –≤–ª–∞–¥–µ–ª—å—Ü–∞ –±–æ—Ç–∞)."""
    if not OWNER_ID:
        return None
    try:
        return chat_data_file(int(OWNER_ID))
    except Exception as e:
        log_error(f"_owner_data_file: {e}")
        return None


def load_forward_rules_from_owner():
    """
    –ü—Ä–∏ —Å—Ç–∞—Ä—Ç–µ: –ø–æ–¥—Ç—è–≥–∏–≤–∞–µ–º forward_rules –∏–∑ data_<OWNER_ID>.json
    –∏ –∫–ª–∞–¥—ë–º –∏—Ö –≤ data["forward_rules"].
    """
    try:
        path = _owner_data_file()
        if not path or not os.path.exists(path):
            return

        payload = _load_json(path, {})
        fr = payload.get("forward_rules")

        if isinstance(fr, dict):
            data.setdefault("forward_rules", {})
            data["forward_rules"] = fr
            log_info(f"üîÅ forward_rules –∑–∞–≥—Ä—É–∂–µ–Ω—ã –∏–∑ {path}")
    except Exception as e:
        log_error(f"load_forward_rules_from_owner: {e}")


def persist_forward_rules_to_owner():
    """
    –ö–∞–∂–¥—ã–π —Ä–∞–∑, –∫–æ–≥–¥–∞ –º–µ–Ω—è–µ–º forward_rules –≤ –ø–∞–º—è—Ç–∏,
    —Å–æ—Ö—Ä–∞–Ω—è–µ–º –∏—Ö –¢–û–õ–¨–ö–û –≤ data_<OWNER_ID>.json.
    """
    try:
        path = _owner_data_file()
        if not path:
            return

        # –ê–∫–∫—É—Ä–∞—Ç–Ω–æ –ø–æ–¥–º–µ—Ä–¥–∂–∏–º –≤ —Å—É—â–µ—Å—Ç–≤—É—é—â–∏–π JSON –≤–ª–∞–¥–µ–ª—å—Ü–∞
        payload = {}
        if os.path.exists(path):
            payload = _load_json(path, {})
            if not isinstance(payload, dict):
                payload = {}

        payload["forward_rules"] = data.get("forward_rules", {})

        _save_json(path, payload)
        log_info(f"üíæ forward_rules —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã —Ç–æ–ª—å–∫–æ –≤ {path}")
    except Exception as e:
        log_error(f"persist_forward_rules_to_owner: {e}")

# ---------- CSV —ç–∫—Å–ø–æ—Ä—Ç ----------
def export_to_csv(d):
    try:
        with open(CSV_FILE, "w", newline="", encoding="utf-8") as f:
            writer = csv.writer(f)
            writer.writerow(["chat_id","ID","short_id","timestamp","amount","note","owner","day_key"])
            for cid, cdata in d.get("chats", {}).items():
                for dk, records in cdata.get("daily_records", {}).items():
                    for r in records:
                        writer.writerow([
                            cid,
                            r.get("id"), r.get("short_id"), r.get("timestamp"),
                            r.get("amount"), r.get("note"), r.get("owner"), dk
                        ])
    except Exception as e:
        log_error(f"export_to_csv: {e}")

# ---------- –ù–æ–≤—ã–π –±–ª–æ–∫: —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –æ—Ç–¥–µ–ª—å–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤ —á–∞—Ç–∞ ----------
def save_chat_json(chat_id: int, data):
    """üíæ –°–æ—Ö—Ä–∞–Ω—è–µ—Ç JSON, CSV –∏ META —Ç–æ–ª—å–∫–æ –¥–ª—è –∫–æ–Ω–∫—Ä–µ—Ç–Ω–æ–≥–æ —á–∞—Ç–∞"""
    try:
        store = data.get("chats", {}).get(str(chat_id), {})
        if not store:
            return
        chat_path_json = chat_data_file(chat_id)
        chat_path_csv = chat_csv_file(chat_id)
        chat_path_meta = chat_meta_file(chat_id)

        # üÜï –µ—Å–ª–∏ —Ñ–∞–π–ª–æ–≤ –µ—â—ë –Ω–µ—Ç ‚Äî —Å–æ–∑–¥–∞—ë–º –ø—É—Å—Ç—ã–µ –∑–∞–≥–ª—É—à–∫–∏
        for p in (chat_path_json, chat_path_csv, chat_path_meta):
            if not os.path.exists(p):
                open(p, "a", encoding="utf-8").close()

        # JSON
        payload = {
            "chat_id": chat_id,
            "balance": store.get("balance", 0),
            "records": store.get("records", []),
            "daily_records": store.get("daily_records", {}),
            "next_id": store.get("next_id", 1),
        }
        _save_json(chat_path_json, payload)

        # CSV
        with open(chat_path_csv, "w", newline="", encoding="utf-8") as f:
            w = csv.writer(f)
            w.writerow(["chat_id","ID","short_id","timestamp","amount","note","owner","day_key"])
            for dk, recs in store.get("daily_records", {}).items():
                for r in recs:
                    w.writerow([
                        chat_id, r.get("id"), r.get("short_id"),
                        r.get("timestamp"), r.get("amount"),
                        r.get("note"), r.get("owner"), dk
                    ])
        # META
        meta = {
            "last_saved": now_local().isoformat(timespec="seconds"),
            "record_count": sum(len(v) for v in store.get("daily_records", {}).values())
        }
        _save_json(chat_path_meta, meta)
        log_info(f"üíæ –ü–µ—Ä—Å–æ–Ω–∞–ª—å–Ω—ã–µ —Ñ–∞–π–ª—ã —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã –¥–ª—è —á–∞—Ç–∞ {chat_id}")
    except Exception as e:
        log_error(f"save_chat_json({chat_id}): {e}")

#‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è
#‚ùáÔ∏è–ì–æ—Ç–æ–≤–æ. –ß–ê–°–¢–¨ 2 / 4 ‚Äî Google Drive, –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ, —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏—è (–≤–∫–ª—é—á–∞—è per-chat), 
#‚ùáÔ∏è–≥–ª–æ–±–∞–ª—å–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ/—Ö—Ä–∞–Ω–∏–ª–∏—â–µ –ø–æ —á–∞—Ç–∞–º, –±—ç–∫–∞–ø –≤ –∫–∞–Ω–∞–ª, UI-–∫–ª–∞–≤–∏–∞—Ç—É—Ä—ã –∏ —Ä–µ–Ω–¥–µ—Ä –æ–∫–Ω–∞.
#‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è
# ====== –ß–ê–°–¢–¨ 2/4 ==========================================
# üß© Google Drive, restore, sync (—Å –ø–æ–¥–¥–µ—Ä–∂–∫–æ–π per-chat), —Ö—Ä–∞–Ω–∏–ª–∏—â–µ –ø–æ —á–∞—Ç–∞–º, UI

# ---------- csv_meta (–≥–ª–æ–±–∞–ª—å–Ω—ã–π) ----------
def _load_csv_meta():
    return _load_json(CSV_META_FILE, {})

def _save_csv_meta(meta: dict):
    try:
        _save_json(CSV_META_FILE, meta)
        log_info("üíæ csv_meta.json –æ–±–Ω–æ–≤–ª—ë–Ω")
    except Exception as e:
        log_error(f"_save_csv_meta: {e}")

# ---------- Google Drive auth ----------
def _build_gdrive_credentials():
    if not SERVICE_ACCOUNT_JSON:
        raise RuntimeError("SERVICE_ACCOUNT_JSON –Ω–µ –∑–∞–¥–∞–Ω–∞")
    try:
        # –ø–æ–¥–¥–µ—Ä–∂–∫–∞ –∏ –¥–ª—è JSON-—Å—Ç—Ä–æ–∫–∏, –∏ –¥–ª—è –ø—É—Ç–∏ –∫ —Ñ–∞–π–ª—É
        if isinstance(SERVICE_ACCOUNT_JSON, str) and SERVICE_ACCOUNT_JSON.strip().startswith("{"):
            sa_info = json.loads(SERVICE_ACCOUNT_JSON)
            scopes = ["https://www.googleapis.com/auth/drive"]
            return service_account.Credentials.from_service_account_info(sa_info, scopes=scopes)
        else:
            scopes = ["https://www.googleapis.com/auth/drive"]
            return service_account.Credentials.from_service_account_file(SERVICE_ACCOUNT_JSON, scopes=scopes)
    except Exception as e:
        log_error(f"GDrive creds error: {e}")
        raise

def _drive_service():
    creds = _build_gdrive_credentials()
    return build("drive", "v3", credentials=creds, cache_discovery=False)

def _gdrive_find_folder(service, name_or_id):
    # –µ—Å–ª–∏ –ø–µ—Ä–µ–¥–∞–Ω —Ä–µ–∞–ª—å–Ω—ã–π ID ‚Äî –≤–µ—Ä–Ω—ë–º –µ–≥–æ –∫–∞–∫ –µ—Å—Ç—å
    if name_or_id and re.fullmatch(r"[A-Za-z0-9_-]{10,}", name_or_id):
        return name_or_id
    if not name_or_id:
        return None
    q = f"mimeType='application/vnd.google-apps.folder' and name='{name_or_id}' and trashed=false"
    res = service.files().list(q=q, spaces="drive", fields="files(id,name)", pageSize=10).execute()
    files = res.get("files", [])
    return files[0]["id"] if files else None

def _gdrive_find_file(service, filename, folder_id=None):
    if folder_id:
        q = f"name='{filename}' and '{folder_id}' in parents and trashed=false"
    else:
        q = f"name='{filename}' and trashed=false"
    res = service.files().list(q=q, spaces="drive", fields="files(id,name)", pageSize=5).execute()
    files = res.get("files", [])
    return files[0]["id"] if files else None

def _guess_mime(path):
    n = os.path.basename(path).lower()
    if n.endswith(".json"): return "application/json"
    if n.endswith(".csv"):  return "text/csv"
    return "application/octet-stream"

def _gdrive_upload(service, local_path, folder_id=None):
    name = os.path.basename(local_path)
    file_id = _gdrive_find_file(service, name, folder_id)
    media = MediaFileUpload(local_path, mimetype=_guess_mime(local_path), resumable=True)
    if file_id:
        return service.files().update(fileId=file_id, media_body=media).execute().get("id")
    meta = {"name": name}
    if folder_id: meta["parents"] = [folder_id]
    return service.files().create(body=meta, media_body=media, fields="id").execute().get("id")

def _gdrive_download(service, filename, dest_path, folder_id=None):
    file_id = _gdrive_find_file(service, filename, folder_id)
    if not file_id:
        return False
    req = service.files().get_media(fileId=file_id)
    fh = io.FileIO(dest_path, "wb")
    downloader = MediaIoBaseDownload(fh, req)
    done = False
    while not done:
        status, done = downloader.next_chunk()
    return True

def upload_to_gdrive(path):
    try:
        service = _drive_service()
        folder_id = _gdrive_find_folder(service, GDRIVE_FOLDER_ID) if GDRIVE_FOLDER_ID else None
        fid = _gdrive_upload(service, path, folder_id)
        log_info(f"‚òÅÔ∏è Upload OK: {os.path.basename(path)} ‚Üí {fid}")
        return fid
    except Exception as e:
        log_error(f"upload_to_gdrive({path}): {e}")
        return None

def download_from_gdrive(filename, dest):
    try:
        service = _drive_service()
        folder_id = _gdrive_find_folder(service, GDRIVE_FOLDER_ID) if GDRIVE_FOLDER_ID else None
        ok = _gdrive_download(service, filename, dest, folder_id)
        if ok: log_info(f"‚òÅÔ∏è Download OK: {filename} ‚Üí {dest}")
        else:  log_info(f"‚òÅÔ∏è Download MISS: {filename} (–Ω–µ –Ω–∞–π–¥–µ–Ω)")
        return ok
    except Exception as e:
        log_error(f"download_from_gdrive({filename}): {e}")
        return False

# ---------- –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–∏ —Å—Ç–∞—Ä—Ç–µ ----------
def restore_from_gdrive_if_needed():
    need = []
    if not os.path.exists(DATA_FILE): need.append(DATA_FILE)
    if not os.path.exists(CSV_FILE): need.append(CSV_FILE)
    if not os.path.exists(CSV_META_FILE): need.append(CSV_META_FILE)
    if not need:
        return

    restored_any = False
    if OWNER_ID:
        send_info(int(OWNER_ID), "‚òÅÔ∏è –ü—ã—Ç–∞—é—Å—å –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –ª–æ–∫–∞–ª—å–Ω—ã–µ —Ñ–∞–π–ª—ã —Å Google Drive‚Ä¶")

    for fn in [CSV_META_FILE, DATA_FILE, CSV_FILE]:
        if fn in need:
            ok = download_from_gdrive(fn, fn)
            if ok:
                restored_any = True

    if not os.path.exists(DATA_FILE):
        _save_json(DATA_FILE, default_data())
    if not os.path.exists(CSV_META_FILE):
        _save_json(CSV_META_FILE, {})

    if OWNER_ID:
        if restored_any:
            send_info(int(OWNER_ID), "‚úÖ –î–∞–Ω–Ω—ã–µ —É—Å–ø–µ—à–Ω–æ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã —Å Google Drive.")
        else:
            send_info(int(OWNER_ID), "‚ö†Ô∏è –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–æ–ø—É—â–µ–Ω–æ (—Ñ–∞–π–ª—ã –Ω–µ –Ω–∞–π–¥–µ–Ω—ã –∏–ª–∏ –∫–≤–æ—Ç–∞ 0).")

# ---------- –ü–æ–ª–Ω–∞—è —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏—è –≤ Drive ----------
# ---------- –ü–æ–ª–Ω–∞—è —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏—è –≤ Drive ----------
def _sync_all_backups_gdrive(d):
    try:
        if not data.get("backup_flags", {}).get("drive", True):
            log_info("‚òÅÔ∏è –ë—ç–∫–∞–ø –Ω–∞ Google Drive –æ—Ç–∫–ª—é—á—ë–Ω –Ω–∞—Å—Ç—Ä–æ–π–∫–æ–π.")
            return
        # 1) –ª–æ–∫–∞–ª—å–Ω–æ ‚Äî –æ–±—â–∏–π –∫—ç—à –∏ –æ–±—â–∏–π CSV (—Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å)
        save_data(d)

        # 2) meta –æ–±–Ω–æ–≤–∏–º –æ—Ç–º–µ—Ç–∫—É —Å–∏–Ω–∫–∞ (–≥–ª–æ–±–∞–ª—å–Ω–∞—è)
        meta = _load_csv_meta()

        # 2) meta –æ–±–Ω–æ–≤–∏–º –æ—Ç–º–µ—Ç–∫—É —Å–∏–Ω–∫–∞ (–≥–ª–æ–±–∞–ª—å–Ω–∞—è)
        meta = _load_csv_meta()
        meta["last_sync"] = now_local().isoformat(timespec="seconds")
        _save_csv_meta(meta)

        # 3) per-chat: –≤—ã–≥—Ä—É–∑–∏—Ç—å –æ—Ç–¥–µ–ª—å–Ω—ã–µ JSON/CSV
        for cid in d.get("chats", {}):
            try:
                cjson = chat_data_file(cid)
                ccsv = chat_csv_file(cid)
                if os.path.exists(cjson): upload_to_gdrive(cjson)
                if os.path.exists(ccsv): upload_to_gdrive(ccsv)
            except Exception as ee:
                log_error(f"sync chat {cid}: {ee}")

        # 4) –∏ –±–∞–∑–æ–≤—ã–µ —Ñ–∞–π–ª—ã (–¥–ª—è —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏ –∏ –±—ã—Å—Ç—Ä–æ–≥–æ restore)
        for p in (DATA_FILE, CSV_FILE, CSV_META_FILE):
            if os.path.exists(p):
                upload_to_gdrive(p)
    except Exception as e:
        log_error(f"_sync_all_backups_gdrive: {e}")

def sync_all_backups_gdrive_async(d):
    threading.Thread(target=_sync_all_backups_gdrive, args=(d,), daemon=True).start()
#üî¥
# ==========================================================
# üì¶ –ö–∞–Ω–∞–ª—å–Ω—ã–π –±—ç–∫–∞–ø (–∏—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω—ã–π)
# ==========================================================
def send_backup_to_channel(chat_id: int | None = None, force: bool = True):
    """–û—Ç–ø—Ä–∞–≤–ª—è–µ—Ç per-chat —Ñ–∞–π–ª—ã (–∏–ª–∏ –æ–±—â–∏–π –Ω–∞–±–æ—Ä) –≤ BACKUP_CHAT_ID."""
    try:
        if not data.get("backup_flags", {}).get("channel", True):
            log_info("üì§ –ë—ç–∫–∞–ø –≤ –∫–∞–Ω–∞–ª –æ—Ç–∫–ª—é—á—ë–Ω –Ω–∞—Å—Ç—Ä–æ–π–∫–æ–π.")
            return
        if not BACKUP_CHAT_ID:
            log_info("‚ö†Ô∏è BACKUP_CHAT_ID –Ω–µ –∑–∞–¥–∞–Ω ‚Äî –ø—Ä–æ–ø—É—Å–∫ –æ—Ç–ø—Ä–∞–≤–∫–∏.")
            return

        time.sleep(1)
        if chat_id:
            files = [chat_data_file(chat_id), chat_csv_file(chat_id), chat_meta_file(chat_id)]
        else:
            files = [DATA_FILE, CSV_FILE, CSV_META_FILE]

        meta = _load_csv_meta()
        for path in files:
            if not os.path.exists(path):
                continue
            if os.path.getsize(path) == 0 and not force:
                continue
            base = os.path.basename(path)
            msg_key = f"message_id_{base}"
            try:
                with open(path, "rb") as f:
                    caption = f"üì¶ {base} ‚Äî –æ–±–Ω–æ–≤–ª—ë–Ω {now_local().strftime('%Y-%m-%d %H:%M')}"
                    if meta.get(msg_key):
                        try:
                            bot.edit_message_media(
                                chat_id=int(BACKUP_CHAT_ID),
                                message_id=meta[msg_key],
                                media=telebot.types.InputMediaDocument(f, caption=caption)
                            )
                            log_info(f"‚ôªÔ∏è –û–±–Ω–æ–≤–ª—ë–Ω —Ñ–∞–π–ª {base} –≤ –∫–∞–Ω–∞–ª–µ.")
                        except Exception as e:
                            log_error(f"edit_message_media {base}: {e}")
                            sent = bot.send_document(int(BACKUP_CHAT_ID), f, caption=caption)
                            meta[msg_key] = sent.message_id
                    else:
                        sent = bot.send_document(int(BACKUP_CHAT_ID), f, caption=caption)
                        meta[msg_key] = sent.message_id
                meta[f"timestamp_{base}"] = now_local().isoformat(timespec="seconds")
                _save_csv_meta(meta)
            except Exception as e:
                log_error(f"send_backup_to_channel {base}: {e}")

    except Exception as e:
        log_error(f"send_backup_to_channel outer: {e}")

# üÖ±Ô∏è==========================================================
# üìã –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –∏ –±—ç–∫–∞–ø —Å–ø–∏—Å–∫–∞ –∏–∑–≤–µ—Å—Ç–Ω—ã—Ö —á–∞—Ç–æ–≤ (–≤ —Ñ–∞–π–ª –≤–ª–∞–¥–µ–ª—å—Ü–∞)
# ==========================================================
def save_known_chats_for_owner():
    """üìã –î–æ–±–∞–≤–ª—è–µ—Ç —Å–ø–∏—Å–æ–∫ –∏–∑–≤–µ—Å—Ç–Ω—ã—Ö —á–∞—Ç–æ–≤ –≤–Ω—É—Ç—Ä—å —Ñ–∞–π–ª–∞ –≤–ª–∞–¥–µ–ª—å—Ü–∞ (data_<OWNER_ID>.json)."""
    try:
        if not OWNER_ID:
            return
        owner_id = int(OWNER_ID)
        path = f"data_{owner_id}.json"

        # –ó–∞–≥—Ä—É–∂–∞–µ–º —Ç–µ–∫—É—â–∏–π JSON –≤–ª–∞–¥–µ–ª—å—Ü–∞
        if os.path.exists(path):
            with open(path, "r", encoding="utf-8") as f:
                content = json.load(f)
        else:
            content = {"chat_id": owner_id}

        # –î–æ–±–∞–≤–ª—è–µ–º/–æ–±–Ω–æ–≤–ª—è–µ–º —Ä–∞–∑–¥–µ–ª known_chats
        known = {}
        for cid, info in data.get("chats", {}).items():
            meta = info.get("info", {})
            known[cid] = {
                "title": meta.get("title") or meta.get("name") or f"–ß–∞—Ç {cid}",
                "username": meta.get("username"),
                "type": meta.get("type"),
                "finance_active": data.get("finance_active_chats", {}).get(cid, False),
                "records_count": len(info.get("records", [])) if "records" in info else 0,
            }

        content["known_chats"] = known
        content["known_chats_updated"] = now_local().isoformat(timespec="seconds")

        # üíæ –°–æ—Ö—Ä–∞–Ω—è–µ–º –æ–±–Ω–æ–≤–ª—ë–Ω–Ω—ã–π —Ñ–∞–π–ª –≤–ª–∞–¥–µ–ª—å—Ü–∞
        with open(path, "w", encoding="utf-8") as f:
            json.dump(content, f, ensure_ascii=False, indent=2)
        log_info(f"üìã known_chats –¥–æ–±–∞–≤–ª–µ–Ω—ã –≤ {path} ({len(known)} —á–∞—Ç–æ–≤)")

        # ‚òÅÔ∏è –∏ –±—ç–∫–∞–ø–∏–º –≤ Drive / –∫–∞–Ω–∞–ª
        if data.get("backup_flags", {}).get("drive", False):
            upload_to_gdrive(path)
        if BACKUP_CHAT_ID:
            with open(path, "rb") as f:
                caption = f"üìã –û–±–Ω–æ–≤–ª—ë–Ω–Ω—ã–π —Å–ø–∏—Å–æ–∫ —á–∞—Ç–æ–≤ –≤–Ω—É—Ç—Ä–∏ data_{owner_id}.json"
                bot.send_document(int(BACKUP_CHAT_ID), f, caption=caption)
    except Exception as e:
        log_error(f"save_known_chats_for_owner: {e}")

#üî¥
# ---------- –ì–ª–æ–±–∞–ª—å–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ ----------

# ================================================================
# üîç –ê–í–¢–û–û–ë–ù–ê–†–£–ñ–ï–ù–ò–ï –ß–ê–¢–û–í, –≥–¥–µ –±–æ—Ç —Å–æ—Å—Ç–æ–∏—Ç (–ª–∏—á–∫–∏, –≥—Ä—É–ø–ø—ã, –∫–∞–Ω–∞–ª—ã)
# ================================================================
def preload_all_bot_chats():
    """
    –î–æ–±–∞–≤–ª—è–µ—Ç –≤ data['chats'] –≤—Å–µ —á–∞—Ç—ã, –≥–¥–µ –±–æ—Ç —Ä–µ–∞–ª—å–Ω–æ —Å–æ—Å—Ç–æ–∏—Ç (–ª–∏—á–∫–∏, –≥—Ä—É–ø–ø—ã, –∫–∞–Ω–∞–ª—ã),
    –¥–∞–∂–µ –µ—Å–ª–∏ —Ç–∞–º –Ω–µ –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω —Ñ–∏–Ω–∞–Ω—Å–æ–≤—ã–π —Ä–µ–∂–∏–º –∏ –Ω–µ—Ç —Å–æ–æ–±—â–µ–Ω–∏–π.
    """
    try:
        me = bot.get_me()
        my_id = me.id
        data.setdefault("chats", {})
        known_chats = set(data["chats"].keys())

        # --- 1Ô∏è‚É£ –ë–µ—Ä—ë–º —á–∞—Ç—ã –∏–∑ –ø–æ—Å–ª–µ–¥–Ω–∏—Ö –∞–ø–¥–µ–π—Ç–æ–≤ (–µ—Å–ª–∏ –µ—Å—Ç—å)
        updates = bot.get_updates(limit=200)
        for u in updates:
            m = getattr(u, "message", None) or getattr(u, "channel_post", None)
            if not m:
                continue

            cid = str(m.chat.id)
            if cid not in data["chats"]:
                info = {
                    "title": getattr(m.chat, "title", None),
                    "username": getattr(m.chat, "username", None),
                    "type": getattr(m.chat, "type", None),
                    "name": (
                        (getattr(m.chat, "first_name", "") + " " +
                         getattr(m.chat, "last_name", "")).strip()
                    ),
                }
                # ‚úÖ –ø—Ä–∞–≤–∏–ª—å–Ω–∞—è —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ —á–∞—Ç–∞
                data["chats"][cid] = {
                    "info": info,
                    "balance": 0,
                    "records": [],
                    "daily_records": {},
                    "next_id": 1,
                    "active_windows": {},
                    "edit_wait": None,
                    "edit_target": None,
                    "current_view_day": today_key()
                }
                log_info(f"üì° –î–æ–±–∞–≤–ª–µ–Ω —á–∞—Ç –∏–∑ –∞–ø–¥–µ–π—Ç–æ–≤: {cid} ({info.get('title') or info.get('name')})")

        # --- 2Ô∏è‚É£ –û–ø—Ä–∞—à–∏–≤–∞–µ–º –∏–∑–≤–µ—Å—Ç–Ω—ã–µ —á–∞—Ç—ã ‚Äî –¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª—å–Ω–æ –ª–∏ –±–æ—Ç —Ç–∞–º –µ—Å—Ç—å
        verified_chats = {}
        for cid, cdata in list(data["chats"].items()):
            try:
                cid_int = int(cid)
                member = bot.get_chat_member(cid_int, my_id)
                if not member or member.status in ("left", "kicked"):
                    log_info(f"üö´ –ë–æ—Ç –Ω–µ —Å–æ—Å—Ç–æ–∏—Ç –≤ —á–∞—Ç–µ {cid}, –ø—Ä–æ–ø—É—Å–∫–∞–µ–º.")
                    continue

                chat_obj = bot.get_chat(cid_int)
                info = {
                    "title": getattr(chat_obj, "title", None),
                    "username": getattr(chat_obj, "username", None),
                    "type": getattr(chat_obj, "type", None),
                    "name": (
                        (getattr(chat_obj, "first_name", "") + " " +
                         getattr(chat_obj, "last_name", "")).strip()
                    ),
                }
                data["chats"][cid]["info"] = info
                verified_chats[cid] = info
                log_info(f"‚úÖ –ü–æ–¥—Ç–≤–µ—Ä–∂–¥—ë–Ω —á–∞—Ç {cid} ({info.get('title') or info.get('name')})")
            except Exception as e:
                log_error(f"preload_all_bot_chats check {cid}: {e}")

        # --- 3Ô∏è‚É£ –°–æ—Ö—Ä–∞–Ω—è–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç
        save_data(data)
        sync_all_backups_gdrive_async(data)
        save_known_chats_for_owner()
        log_info(f"üìã –û–±–Ω–∞—Ä—É–∂–µ–Ω–æ –∏ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–æ —á–∞—Ç–æ–≤: {len(verified_chats)}")
    except Exception as e:
        log_error(f"preload_all_bot_chats: {e}")
# ================================================================

#%restore_from_gdrive_if_needed()
data = load_data()

# üîß –ù–æ—Ä–º–∞–ª–∏–∑–∞—Ü–∏—è —Å—Ç—Ä—É–∫—Ç—É—Ä—ã —á–∞—Ç–æ–≤ (–∏—Å–ø—Ä–∞–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ä—ã—Ö JSON, –≥–¥–µ records = {})
for cid, store in list(data.get("chats", {}).items()):
    if not isinstance(store, dict):
        store = {}
        data["chats"][cid] = store

    recs = store.get("records")
    # –µ—Å–ª–∏ –ø–æ –æ—à–∏–±–∫–µ –±—ã–ª dict ‚Äî –ø—Ä–µ–≤—Ä–∞—â–∞–µ–º –≤ —Å–ø–∏—Å–æ–∫ –∑–Ω–∞—á–µ–Ω–∏–π
    if isinstance(recs, dict):
        store["records"] = list(recs.values())
    elif not isinstance(recs, list):
        store["records"] = []

    store.setdefault("daily_records", {})
    store.setdefault("balance", 0)
    store.setdefault("next_id", 1)
    store.setdefault("active_windows", {})
    store.setdefault("edit_wait", None)
    store.setdefault("edit_target", None)
    store.setdefault("current_view_day", today_key())

#preload_all_bot_chats()  # üîç –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –Ω–∞—Ö–æ–¥–∏—Ç –≤—Å–µ —á–∞—Ç—ã, –≥–¥–µ –±–æ—Ç —Å–æ—Å—Ç–æ–∏—Ç
# ---------- –•—Ä–∞–Ω–∏–ª–∏—â–µ –ø–æ —á–∞—Ç–∞–º ---------
#‚è¨Ô∏è‚è¨Ô∏è‚è¨Ô∏è‚è¨Ô∏è‚è¨Ô∏è‚è¨Ô∏è‚è¨Ô∏èüìÉüìÉüìÉüìÉüìÉüíß
# ================================================================
#   ‚¨áÔ∏è  –≤—Å—Ç–∞–≤–ª—è–µ–º –Ω–∏–∂–µ –Ω–æ–≤—É—é —Ñ—É–Ω–∫—Ü–∏—é chat_display_name
# ================================================================
def chat_display_name(chat) -> str:
    """–í–æ–∑–≤—Ä–∞—â–∞–µ—Ç —É–¥–æ–±–Ω–æ–µ –∏–º—è –¥–ª—è –∫–Ω–æ–ø–æ–∫ –∏ –ª–æ–≥–æ–≤."""
    try:
        if not chat:
            return "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π —á–∞—Ç"
        if chat.type == "private":
            name = chat.first_name or ""
            if chat.last_name:
                name += f" {chat.last_name}"
            return name.strip() or f"Private {chat.id}"
        title = chat.title or f"Chat {chat.id}"
        if chat.username:
            return f"{title} @{chat.username}"
        return title
    except Exception:
        return f"Chat {getattr(chat, 'id', '?')}"
#‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è

#‚è¨Ô∏è‚è¨Ô∏è‚è¨Ô∏è
# ---------- –•—Ä–∞–Ω–∏–ª–∏—â–µ –ø–æ —á–∞—Ç–∞–º ----------
def get_chat_store(chat_id: int) -> dict:
    cid = str(chat_id)
    # ‚úÖ –≥–∞—Ä–∞–Ω—Ç–∏—Ä—É–µ–º –Ω–∞–ª–∏—á–∏–µ —Å–ª–æ–≤–∞—Ä—è –¥–ª—è —á–∞—Ç–∞
    if "chats" not in data:
        data["chats"] = {}

    if cid not in data["chats"]:
        data["chats"][cid] = {
            "balance": 0,
            "records": [],
            "next_id": 1,
            "daily_records": {},
            "active_windows": {},
            "edit_wait": None,
            "edit_target": None,
            "current_view_day": today_key()
        }
        save_data(data)
        save_chat_json(chat_id, data)
        sync_all_backups_gdrive_async(data)

    store = data["chats"][cid]  # üîπ —Ç–µ–ø–µ—Ä—å –ø–µ—Ä–µ–º–µ–Ω–Ω–∞—è –≥–∞—Ä–∞–Ω—Ç–∏—Ä–æ–≤–∞–Ω–Ω–æ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç

    # üíé –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ —á–∞—Ç–µ
    try:
        chat_obj = bot.get_chat(chat_id)
        info = {
            "title": getattr(chat_obj, "title", None),
            "username": getattr(chat_obj, "username", None),
            "type": getattr(chat_obj, "type", None),
            "name": (getattr(chat_obj, "first_name", "") + " " + getattr(chat_obj, "last_name", "")).strip(),
        }
        store["info"] = info
        save_chat_json(chat_id, data)
    except Exception as e:
        log_error(f"get_chat_store info update: {e}")

    store.setdefault("current_view_day", today_key())
    return store
#üî∫üî∫üî∫üî∫‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è‚è´Ô∏è

def set_current_view_day(chat_id: int, day_key: str):
    store = get_chat_store(chat_id)
    store["current_view_day"] = day_key
    save_data(data)
    save_chat_json(chat_id, data)
    sync_all_backups_gdrive_async(data)

def get_current_view_day(chat_id: int) -> str:
    return get_chat_store(chat_id).get("current_view_day", today_key())

def get_active_window_id(chat_id: int, day_key: str):
    return data.setdefault("active_messages", {}).setdefault(day_key, {}).get(str(chat_id))

def set_active_window(chat_id: int, day_key: str, message_id: int):
    data.setdefault("active_messages", {}).setdefault(day_key, {})[str(chat_id)] = message_id
    save_data(data)
    save_chat_json(chat_id, data)
    sync_all_backups_gdrive_async(data)

def clear_active_window(chat_id: int, day_key: str):
    am = data.setdefault("active_messages", {}).setdefault(day_key, {})
    if str(chat_id) in am:
        am.pop(str(chat_id), None)
        save_data(data)
        save_chat_json(chat_id, data)
        sync_all_backups_gdrive_async(data)

def delete_message_safe(chat_id: int, message_id: int):
    try:
        bot.delete_message(chat_id, message_id)
    except Exception:
        pass

def delete_active_window_if_exists(chat_id: int, day_key: str):
    old_id = get_active_window_id(chat_id, day_key)
    if old_id:
        delete_message_safe(chat_id, old_id)
        clear_active_window(chat_id, day_key)

# ---------- –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –ø–æ Telegram: –∏–∑ owner-—á–∞—Ç–∞ (CSV) ----------
def restore_from_telegram_owner_chat():
    try:
        if not OWNER_ID:
            log_info("‚ö†Ô∏è OWNER_ID –Ω–µ –∑–∞–¥–∞–Ω ‚Äî –ø—Ä–æ–ø—É—Å–∫ owner-–≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è.")
            return False
        try:
            bot.delete_webhook()
            log_info("üß© Webhook –æ—Ç–∫–ª—é—á—ë–Ω –¥–ª—è –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è –∏–∑ owner-—á–∞—Ç–∞.")
            time.sleep(4)
        except Exception as e:
            log_error(f"delete_webhook(owner): {e}")

        updates = bot.get_updates(limit=150)
        file_id = None
        for u in reversed(updates):
            m = getattr(u, "message", None)
            if not m or not getattr(m, "document", None):
                continue
            if m.chat and str(m.chat.id) == str(OWNER_ID) and m.document.file_name.lower().endswith(".csv"):
                file_id = m.document.file_id
                log_info(f"üì¶ –ù–∞–π–¥–µ–Ω CSV –≤ owner-—á–∞—Ç–µ: {m.document.file_name}")
                break

        if not file_id:
            log_info("‚ùï –í owner-—á–∞—Ç–µ CSV –Ω–µ –Ω–∞–π–¥–µ–Ω.")
            return False

        file = bot.get_file(file_id)
        content = bot.download_file(file.file_path)
        tmp = "owner_restore.csv"
        with open(tmp, "wb") as f:
            f.write(content)

        # —Å–æ–±–µ—Ä—ë–º –æ–±—â–∏–π data –∏–∑ CSV; per-chat —Ñ–∞–π–ª—ã —Å–æ–∑–¥–∞–¥–∏–º –∏–∑ –Ω–µ–≥–æ –ø–æ–∑–∂–µ –ø—Ä–∏ –ø–µ—Ä–≤–æ–º —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏
        restored = default_data()
        with open(tmp, "r", encoding="utf-8") as f:
            rd = csv.DictReader(f)
            for row in rd:
                cid = str(row["chat_id"])
                rec = {
                    "id": int(row["ID"]),
                    "short_id": row["short_id"],
                    "timestamp": row["timestamp"],
                    "amount": int(row["amount"]),
                    "note": row["note"],
                    "owner": row["owner"]
                }
                restored["records"].append(rec)
                ch = restored["chats"].setdefault(cid, {"records": [], "daily_records": {}, "balance": 0})
                ch["records"].append(rec)
                dk = row["day_key"]
                ch["daily_records"].setdefault(dk, []).append(rec)
                ch["balance"] += rec["amount"]
                restored["overall_balance"] += rec["amount"]
                restored["next_id"] = max(restored["next_id"], rec["id"] + 1)

        _save_json(DATA_FILE, restored)
        globals()["data"] = restored
        log_info("‚úÖ –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–∑ owner-—á–∞—Ç–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–æ.")
        # —Å–æ–∑–¥–∞–¥–∏–º per-chat —Ñ–∞–π–ª—ã –¥–ª—è –≤—Å–µ—Ö —á–∞—Ç–æ–≤
        for cid in restored.get("chats", {}):
            try:
                save_chat_json(int(cid), restored)
            except Exception as ee:
                log_error(f"make per-chat after owner_restore for {cid}: {ee}")
        return True
    except Exception as e:
        log_error(f"restore_from_telegram_owner_chat: {e}")
        return False

# ---------- –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –ø–æ Telegram: –∏–∑ –∫–∞–Ω–∞–ª–∞ BACKUP_CHAT_ID (CSV) ----------
def restore_from_backup_channel():
    try:
        if not BACKUP_CHAT_ID:
            log_info("‚ö†Ô∏è BACKUP_CHAT_ID –Ω–µ –∑–∞–¥–∞–Ω ‚Äî –ø—Ä–æ–ø—É—Å–∫ –∫–∞–Ω–∞–ª-–≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è.")
            return False

        meta = _load_csv_meta()
        fid = meta.get("file_id_csv")

        if not fid:
            try:
                bot.delete_webhook()
                log_info("üß© Webhook –æ—Ç–∫–ª—é—á—ë–Ω –¥–ª—è –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è –∏–∑ –∫–∞–Ω–∞–ª–∞.")
                time.sleep(4)
            except Exception as e:
                log_error(f"delete_webhook(channel): {e}")

            updates = bot.get_updates(limit=200)
            for u in reversed(updates):
                m = getattr(u, "message", None)
                if not m or not getattr(m, "document", None):
                    continue
                if m.chat and str(m.chat.id) == str(BACKUP_CHAT_ID) and m.document.file_name.lower().endswith(".csv"):
                    fid = m.document.file_id
                    meta["file_id_csv"] = fid
                    _save_csv_meta(meta)
                    log_info(f"‚úÖ CSV –Ω–∞–π–¥–µ–Ω –≤ –∫–∞–Ω–∞–ª–µ: {m.document.file_name}")
                    break

        if not fid:
            log_info("‚ùï CSV –≤ –∫–∞–Ω–∞–ª–µ –Ω–µ –Ω–∞–π–¥–µ–Ω.")
            return False

        file = bot.get_file(fid)
        content = bot.download_file(file.file_path)
        tmp = "channel_restore.csv"
        with open(tmp, "wb") as f:
            f.write(content)

        restored = default_data()
        with open(tmp, "r", encoding="utf-8") as f:
            rd = csv.DictReader(f)
            for row in rd:
                cid = str(row["chat_id"])
                rec = {
                    "id": int(row["ID"]),
                    "short_id": row["short_id"],
                    "timestamp": row["timestamp"],
                    "amount": int(row["amount"]),
                    "note": row["note"],
                    "owner": row["owner"]
                }
                restored["records"].append(rec)
                ch = restored["chats"].setdefault(cid, {"records": [], "daily_records": {}, "balance": 0})
                ch["records"].append(rec)
                dk = row["day_key"]
                ch["daily_records"].setdefault(dk, []).append(rec)
                ch["balance"] += rec["amount"]
                restored["overall_balance"] += rec["amount"]
                restored["next_id"] = max(restored["next_id"], rec["id"] + 1)

        _save_json(DATA_FILE, restored)
        globals()["data"] = restored
        log_info("‚úÖ –í–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–∑ –∫–∞–Ω–∞–ª–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–æ.")
        for cid in restored.get("chats", {}):
            try:
                save_chat_json(int(cid), restored)
            except Exception as ee:
                log_error(f"make per-chat after channel_restore for {cid}: {ee}")
        return True
    except Exception as e:
        log_error(f"restore_from_backup_channel: {e}")
        return False

# ---------- –ö–∞–Ω–∞–ª—å–Ω—ã–π –±—ç–∫–∞–ø ----------
# ---------- –ö–∞–Ω–∞–ª—å–Ω—ã–π –±—ç–∫–∞–ø ----------
        for fpath in target_files:
            if not os.path.exists(fpath):
                continue
            if os.path.getsize(fpath) == 0 and not force:
                continue

            meta = _load_csv_meta()
            base = os.path.basename(fpath)
            msg_key = f"message_id_{base}"

            try:
                with open(fpath, "rb") as f:
                    if meta.get(msg_key):
                        try:
                            bot.edit_message_media(
                                media=telebot.types.InputMediaDocument(
                                    f,
                                    caption=f"üì¶ {base} ‚Äî –æ–±–Ω–æ–≤–ª—ë–Ω {now_local().strftime('%Y-%m-%d %H:%M')}"
                                ),
                                chat_id=int(BACKUP_CHAT_ID),
                                message_id=meta[msg_key]
                            )
                            log_info(f"‚ôªÔ∏è –û–±–Ω–æ–≤–ª—ë–Ω —Ñ–∞–π–ª {base} (–ø–µ—Ä–µ–∑–∞–ø–∏—Å–∞–Ω –≤ –∫–∞–Ω–∞–ª–µ).")
                        except Exception as e:
                            log_error(f"edit_message_media {base}: {e}")
                            sent = bot.send_document(
                                int(BACKUP_CHAT_ID), f,
                                caption=f"üì¶ {base} ‚Äî –æ–±–Ω–æ–≤–ª—ë–Ω {now_local().strftime('%Y-%m-%d %H:%M')}"
                            )
                            meta[msg_key] = sent.message_id
                    else:
                        sent = bot.send_document(
                            int(BACKUP_CHAT_ID), f,
                            caption=f"üì¶ {base} ‚Äî –æ–±–Ω–æ–≤–ª—ë–Ω {now_local().strftime('%Y-%m-%d %H:%M')}"
                        )
                        meta[msg_key] = sent.message_id

                meta[f"timestamp_{base}"] = now_local().isoformat(timespec="seconds")
                _save_csv_meta(meta)
            except Exception as e:
                log_error(f"send_backup_to_channel({base}): {e}")

    except Exception as e:
        log_error(f"send_backup_to_channel outer: {e}")

# –ø–µ—Ä–≤–∏—á–Ω–∞—è –∞—Å–∏–Ω—Ö—Ä–æ–Ω–Ω–∞—è —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∞—Ü–∏—è –∏ —Å—Ç–∞—Ä—Ç–æ–≤—ã–π –±—ç–∫–∞–ø –≤ –∫–∞–Ω–∞–ª (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ)
sync_all_backups_gdrive_async(data)
#send_backup_to_channel(chat_id)
send_backup_to_channel()

# ---------- UI –∫–ª–∞–≤–∏–∞—Ç—É—Ä—ã ----------
def build_main_keyboard(day_key: str, chat_id: int | None = None):
    kb = types.InlineKeyboardMarkup(row_width=2)
    kb.row(
        types.InlineKeyboardButton("üí∞ –ë–∞–ª–∞–Ω—Å", callback_data=f"d:{day_key}:balance"),
        types.InlineKeyboardButton("üìä –û—Ç—á—ë—Ç", callback_data=f"d:{day_key}:report"),
    )
    kb.row(
        types.InlineKeyboardButton("üîÑ –û–±–Ω–æ–≤–∏—Ç—å", callback_data=f"d:{day_key}:refresh"),
        types.InlineKeyboardButton("‚úèÔ∏è –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å", callback_data=f"d:{day_key}:edit_menu"),
    )
    chat_data = data.get("chats", {}).get(str(chat_id), {})
    total = chat_data.get("balance", 0)
    kb.add(
        types.InlineKeyboardButton(
            f"üí∞ –û–±—â–∏–π –æ—Å—Ç–∞—Ç–æ–∫: {fmt_num(total)} ARS",
            callback_data=f"d:{day_key}:total"
        )
    )
    return kb

def build_edit_menu_keyboard(day_key: str, chat_id=None):
    kb = types.InlineKeyboardMarkup(row_width=2)
    kb.row(
        types.InlineKeyboardButton("üìù –†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –∑–∞–ø–∏—Å—å", callback_data=f"d:{day_key}:edit_list"),
        types.InlineKeyboardButton("üìÇ –û–±—â–∏–π CSV", callback_data=f"d:{day_key}:csv_all")
    )
    kb.row(
        types.InlineKeyboardButton("üìÖ CSV –∑–∞ –¥–µ–Ω—å", callback_data=f"d:{day_key}:csv_day"),
        types.InlineKeyboardButton("‚öôÔ∏è –û–±–Ω—É–ª–∏—Ç—å", callback_data=f"d:{day_key}:reset")
    )
    kb.row(
        types.InlineKeyboardButton("üìÖ –°–µ–≥–æ–¥–Ω—è", callback_data=f"d:{today_key()}:open"),
        types.InlineKeyboardButton("üìÜ –í—ã–±—Ä–∞—Ç—å –¥–µ–Ω—å", callback_data=f"d:{day_key}:pick_date")
    )
    kb.row(
        types.InlineKeyboardButton("‚ÑπÔ∏è –ò–Ω—Ñ–æ", callback_data=f"d:{day_key}:info"),
        types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"d:{day_key}:back_main")
    )
    return kb
#*Ô∏è‚É£*Ô∏è‚É£*Ô∏è‚É£*Ô∏è‚É£*Ô∏è‚É£*Ô∏è‚É£*Ô∏è‚É£
def build_edit_keyboard_for_record(day_key: str, rid: int):
    kb = types.InlineKeyboardMarkup(row_width=1)
    kb.add(types.InlineKeyboardButton("‚úè –í–≤–µ—Å—Ç–∏ –≤—Ä—É—á–Ω—É—é", callback_data=f"d:{day_key}:edit_manual:{rid}"))
    kb.add(types.InlineKeyboardButton("üóë –£–¥–∞–ª–∏—Ç—å", callback_data=f"d:{day_key}:edit_delete:{rid}"))
    # ‚úÖ –¥–æ–±–∞–≤–ª–µ–Ω–æ –ø–æ –¢–ó 8 ‚Äî –Ω–æ–≤–∞—è –∫–Ω–æ–ø–∫–∞ ¬´‚ûï –î–æ–±–∞–≤–∏—Ç—å¬ª
    kb.add(types.InlineKeyboardButton("‚ûï –î–æ–±–∞–≤–∏—Ç—å", callback_data=f"d:{day_key}:add_new"))
    kb.add(types.InlineKeyboardButton("üîô –ù–∞–∑–∞–¥", callback_data=f"d:{day_key}:edit_back"))
    return kb

# ‚úÖ –¥–æ–±–∞–≤–ª–µ–Ω–æ –ø–æ –¢–ó 8 ‚Äî –ª–æ–≥–∏–∫–∞ –¥–ª—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ –∫–Ω–æ–ø–∫–∏ ¬´–î–æ–±–∞–≤–∏—Ç—å¬ª –∏ –∞–≤—Ç–æ–æ—Ç–º–µ–Ω–∞ —á–µ—Ä–µ–∑ 30 —Å
@bot.callback_query_handler(func=lambda c: c.data.endswith(":add_new"))
def handle_add_new_record(call):
    chat_id = call.message.chat.id
    day_key = call.data.split(":")[1]
    bot.answer_callback_query(call.id, "–í–≤–µ–¥–∏—Ç–µ –Ω–æ–≤—É—é –∑–∞–ø–∏—Å—å –¥–ª—è —ç—Ç–æ–≥–æ –¥–Ω—è:")
    msg = bot.send_message(chat_id, f"‚úè –í–≤–µ–¥–∏—Ç–µ —Å—É–º–º—É –∏ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π –¥–ª—è {day_key}‚Ä¶")
    bot.register_next_step_handler(msg, lambda m: handle_add_entry(m, day_key))
    # –∞–≤—Ç–æ–æ—Ç–º–µ–Ω–∞ —á–µ—Ä–µ–∑ 30 —Å ‚Äî –≤–æ–∑–≤—Ä–∞—Ç –≤ –æ—Å–Ω–æ–≤–Ω–æ–µ –º–µ–Ω—é
    threading.Timer(30, lambda: safe_back_to_main(chat_id)).start()

def handle_add_entry(msg, date_key):
    chat_id = msg.chat.id
    text = msg.text.strip()
    if not text:
        bot.send_message(chat_id, "‚ùå –ü—É—Å—Ç–∞—è –∑–∞–ø–∏—Å—å –Ω–µ –¥–æ–±–∞–≤–ª–µ–Ω–∞.")
        update_or_send_day_window(chat_id, date_key, True, True, True)
        return
    store = get_chat_store(chat_id)
    amount_token = text.split()[0]
    note = " ".join(text.split()[1:])
    amount = parse_amount_token(amount_token)
    add_record_to_chat(chat_id, amount, note, msg.from_user.id)
    bot.send_message(chat_id, f"‚úÖ –ó–∞–ø–∏—Å—å –¥–æ–±–∞–≤–ª–µ–Ω–∞ –≤ {date_key}.")
    update_or_send_day_window(chat_id, date_key, True, True, True)

def safe_back_to_main(chat_id):
    """‚úÖ –¥–æ–±–∞–≤–ª–µ–Ω–æ –ø–æ –¢–ó 8 ‚Äî –≤–æ–∑–≤—Ä–∞—Ç –≤ –æ—Å–Ω–æ–≤–Ω–æ–µ –æ–∫–Ω–æ –ø—Ä–∏ –±–µ–∑–¥–µ–π—Å—Ç–≤–∏–∏"""
    try:
        update_or_send_day_window(chat_id, today_key(), True, True, True)
    except Exception as e:
        log_error(f"safe_back_to_main: {e}")
#‚è∫Ô∏è‚è∫Ô∏è‚è∫Ô∏è‚è∫Ô∏è‚è∫Ô∏è‚è∫Ô∏è‚è∫Ô∏è‚è∫Ô∏è‚è∫Ô∏è‚è∫Ô∏è
def build_confirm_delete_keyboard(day_key: str, rid: int):
    kb = types.InlineKeyboardMarkup(row_width=2)
    kb.row(
        types.InlineKeyboardButton("‚úÖ –î–∞, —É–¥–∞–ª–∏—Ç—å", callback_data=f"d:{day_key}:confirm_delete:{rid}"),
        types.InlineKeyboardButton("‚ùå –û—Ç–º–µ–Ω–∞", callback_data=f"d:{day_key}:cancel_delete")
    )
    return kb

def build_reset_confirm_keyboard(day_key: str):
    kb = types.InlineKeyboardMarkup(row_width=2)
    kb.row(
        types.InlineKeyboardButton("‚úÖ –î–∞, –æ–±–Ω—É–ª–∏—Ç—å", callback_data=f"d:{day_key}:confirm_reset_all"),
        types.InlineKeyboardButton("‚ùå –û—Ç–º–µ–Ω–∞", callback_data=f"d:{day_key}:cancel_reset_all")
    )
    return kb

def build_last_31days_calendar():
    today = now_local().date()
    days = [today - timedelta(days=i) for i in range(0, 31)]
    kb = types.InlineKeyboardMarkup()
    row = []
    for idx, d in enumerate(days, start=1):
        label = d.strftime("%d/%m"); dk = d.strftime("%Y-%m-%d")
        row.append(types.InlineKeyboardButton(text=label, callback_data=f"d:{dk}:calopen"))
        if idx % 7 == 0:
            kb.row(*row); row = []
    if row: kb.row(*row)
    # ‚úÖ –¥–æ–±–∞–≤–ª–µ–Ω–æ –ø–æ –¢–ó 9 ‚Äî –∫–Ω–æ–ø–∫–∞ ¬´–ù–∞–∑–∞–¥¬ª –≤ –∫–∞–ª–µ–Ω–¥–∞—Ä–µ
    kb.row(types.InlineKeyboardButton("‚¨ÖÔ∏è –ù–∞–∑–∞–¥", callback_data=f"d:{today_key()}:back_main"))
    return kb

# ---------- –†–µ–Ω–¥–µ—Ä –æ–∫–Ω–∞ –¥–Ω—è ----------
def render_day_text(store: dict, day_key: str) -> str:
    day_records = store.get("daily_records", {}).get(day_key, [])
    daily_income = sum(r["amount"] for r in day_records if r["amount"] > 0)
    daily_expense = sum(r["amount"] for r in day_records if r["amount"] < 0)
    overall_balance = store.get("balance", 0)

    if not day_records:
        text = (
            f"üìÖ {day_key}\n"
            f"–ü–æ–∫–∞ –Ω–µ—Ç –æ–ø–µ—Ä–∞—Ü–∏–π –≤ —ç—Ç–æ—Ç –¥–µ–Ω—å.\n"
            f"üíµ –ü—Ä–∏—Ö–æ–¥: {fmt_num(daily_income)} ARS\n"
            f"üí∏ –†–∞—Å—Ö–æ–¥: {fmt_num(abs(daily_expense))} ARS\n"
            f"üí∞ –û–±—â–∏–π –æ—Å—Ç–∞—Ç–æ–∫: {fmt_num(overall_balance)} ARS"
        )
    else:
        lines = [f"üìÖ {day_key}", "üìã –û–ø–µ—Ä–∞—Ü–∏–∏:"]
        for r in day_records[-50:]:
            sign = "+" if r["amount"] > 0 else "-"
            lines.append(f"{r['short_id']}: {sign}{fmt_num(abs(r['amount']))} ‚Äî {r.get('note','')}")
        lines.append(
            f"\nüíµ –ü—Ä–∏—Ö–æ–¥: {fmt_num(daily_income)} ARS\n"
            f"üí∏ –†–∞—Å—Ö–æ–¥: {fmt_num(abs(daily_expense))} ARS\n"
            f"üí∞ –û–±—â–∏–π –æ—Å—Ç–∞—Ç–æ–∫: {fmt_num(overall_balance)} ARS"
        )
        text = "\n".join(lines)
    return text

#‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è
#‚ùáÔ∏è–ì–æ—Ç–æ–≤ –ø—Ä–æ–¥–æ–ª–∂–∞—Ç—å –∏ –ø—Ä–∏—Å–ª–∞—Ç—å –ß–ê–°–¢–¨ 3 / 4 (–æ–ø–µ—Ä–∞—Ü–∏–∏ add/update/delete, 
#‚ùáÔ∏è–ø–∞—Ä—Å–µ—Ä —Å—É–º–º, callback-–ª–æ–≥–∏–∫–∞, –∫–æ–º–∞–Ω–¥—ã).
#‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è‚ùáÔ∏è
# ====== –ß–ê–°–¢–¨ 3/4 ==========================================
# üß© –û–ø–µ—Ä–∞—Ü–∏–∏ (add/update/delete), –ø–∞—Ä—Å–µ—Ä —Å—É–º–º, callback-–æ–±—Ä–∞–±–æ—Ç—á–∏–∫

# ---------- –£–Ω–∏–≤–µ—Ä—Å–∞–ª—å–Ω—ã–π –ø–∞—Ä—Å–µ—Ä —Å—É–º–º ----------
num_re = re.compile(r'[+\-]?\s*\d(?:[\d\s\._\'",]*\d)?')

def parse_amount_token(token: str) -> float:
    """
    –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ—Ç —Å—Ç—Ä–æ–∫—É –≤–∏–¥–∞:
      "1.200", "1 200", "1,200", "1.200,50", "+1 000", "-2.500,75", "1_000", "1'234"
    –≤ —á–∏—Å–ª–æ —Å –¥–≤—É–º—è –¥–µ—Å—è—Ç–∏—á–Ω—ã–º–∏ (float, –æ–∫—Ä—É–≥–ª—ë–Ω–Ω–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –≤ ARS).
    –ü—Ä–∞–≤–∏–ª–∞ –∑–Ω–∞–∫–æ–≤:
      ‚Ä¢ –±–µ–∑ –∑–Ω–∞–∫–∞ ‚Üí –û–¢–†–ò–¶–ê–¢–ï–õ–¨–ù–û (—Ä–∞—Å—Ö–æ–¥)
      ‚Ä¢ '-' ‚Üí –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω–æ
      ‚Ä¢ '+' ‚Üí –ø–æ–ª–æ–∂–∏—Ç–µ–ª—å–Ω–æ
    """
    if not token:
        return 0.0
    t = token.strip()
    for uni_minus in ('‚àí', '‚Äì', '‚Äî'):
        t = t.replace(uni_minus, '-')
    sign = -1
    m = re.match(r'^([+\-])\s*', t)
    if m:
        sign = 1 if m.group(1) == '+' else -1
        t = t[m.end():]
    t = re.sub(r'[ _\'"]+', '', t)
    if not t:
        return 0.0
    t = re.sub(r'[^0-9\.,]', '', t)
    if not t:
        return 0.0

    has_dot = '.' in t
    has_comma = ',' in t
    if has_dot and has_comma:
        last_dot  = t.rfind('.')
        last_comma = t.rfind(',')
        if last_comma > last_dot:
            t = t.replace('.', '')
            t = t.replace(',', '.')
        else:
            t = t.replace(',', '')
    elif has_dot or has_comma:
        sep = '.' if has_dot else ','
        if t.count(sep) > 1:
            t = t.replace(sep, '')
        else:
            left, right = t.split(sep, 1)
            if left.isdigit() and right.isdigit():
                if len(right) == 3:
                    t = left + right
                else:
                    if sep == ',':
                        t = left + '.' + right
            else:
                t = left + right

    parts = t.split('.')
    if len(parts) > 2:
        t = ''.join(parts)
    t = re.sub(r'[^0-9\.]', '', t)
    if not t or t == '.':
        return 0.0

    try:
        value = float(t)
        return round(sign * value, 2)
    except Exception:
        return 0.0

# ---------- –û–∫–Ω–æ –¥–Ω—è ----------
def update_or_send_day_window(
    chat_id: int,
    day_key: str = None,
    create_if_missing: bool = True,
    force_new: bool = False,
    delete_target_old: bool = False,
    delete_source_old: bool = False,
    source_day_key: str | None = None
):
    day_key = day_key or today_key()
    store = get_chat_store(chat_id)

    if delete_target_old:
        delete_active_window_if_exists(chat_id, day_key)
    if delete_source_old and source_day_key and source_day_key != day_key:
        delete_active_window_if_exists(chat_id, source_day_key)

    set_current_view_day(chat_id, day_key)

    text = render_day_text(store, day_key)
    kb = build_main_keyboard(day_key, chat_id)
    active_id = get_active_window_id(chat_id, day_key)

    if not force_new and active_id:
        try:
            bot.edit_message_text(text, chat_id, active_id, reply_markup=kb)
            return
        except telebot.apihelper.ApiException as e:
            log_error(f"edit_message_text: {e}")

    if not create_if_missing and not force_new:
        return

    try:
        sent = bot.send_message(chat_id, text, reply_markup=kb)
        set_active_window(chat_id, day_key, sent.message_id)
    except Exception as e:
        log_error(f"send new window: {e}")

# ---------- –û–ø–µ—Ä–∞—Ü–∏–∏ ----------
def add_record_to_chat(chat_id: int, amount: int, note: str, owner):
    store = get_chat_store(chat_id)
    rid = store.get("next_id", 1)  # üîπ –ª–æ–∫–∞–ª—å–Ω—ã–π ID —Ç–æ–ª—å–∫–æ –¥–ª—è —ç—Ç–æ–≥–æ —á–∞—Ç–∞
    rec = {
        "id": rid,
        "short_id": f"R{rid}",
        "timestamp": now_local().isoformat(timespec="seconds"),
        "amount": amount,
        "note": note,
        "owner": owner
    }

   #data.setdefault("records", []).append(rec)
    store.setdefault("records", []).append(rec)
    day = today_key()
    store.setdefault("daily_records", {}).setdefault(day, []).append(rec)

    store["balance"] = store.get("balance", 0) + amount
    data["overall_balance"] = data.get("overall_balance", 0) + amount
    store["next_id"] = rid + 1

    save_data(data)                          # –ª–æ–∫–∞–ª—å–Ω–æ (–æ–±—â–∏–π –∫—ç—à)
    save_chat_json(chat_id, data)            # ‚ûï –ø–µ—Ä-—á–∞—Ç–æ–≤—ã–µ —Ñ–∞–π–ª—ã
    update_or_send_day_window(chat_id, day)  # —Å–Ω–∞—á–∞–ª–∞ UI
    sync_all_backups_gdrive_async(data)      # –∑–∞—Ç–µ–º GDrive
    send_backup_to_channel(chat_id)                 # –ø–æ—Ç–æ–º –∫–∞–Ω–∞–ª
    return rec

def update_record_in_chat(chat_id: int, rid: int, new_amount: int, new_note: str, user=None):
    store = get_chat_store(chat_id)
    found = None
    for r in store.get("records", []):
        if r["id"] == rid:
            r["amount"] = new_amount
            r["note"] = new_note
            found = r
            break
    if found:
        for day_recs in store.get("daily_records", {}).values():
            for r in day_recs:
                if r["id"] == rid:
                    r.update(found)
        store["balance"] = sum(x["amount"] for x in store.get("records", []))
        #data["records"] = [x if x["id"] != rid else found for x in data.get("records", [])]
        #data["overall_balance"] = sum(x["amount"] for x in data.get("records", []))

        save_data(data)
        save_chat_json(chat_id, data)        # ‚ûï –ø–µ—Ä-—á–∞—Ç–æ–≤—ã–µ —Ñ–∞–π–ª—ã
        sync_all_backups_gdrive_async(data)
        send_backup_to_channel(chat_id)
        return True, found
    return False, None

def delete_record_in_chat(chat_id: int, rid: int, user=None):
    store = get_chat_store(chat_id)
    removed = None
    for r in list(store.get("records", [])):
        if r["id"] == rid:
            removed = r
            store["records"].remove(r)
            break
    if removed:
        for dk, recs in store.get("daily_records", {}).items():
            store["daily_records"][dk] = [x for x in recs if x["id"] != rid]
        store["balance"] = sum(x["amount"] for x in store.get("records", []))
        data["records"] = [x for x in data.get("records", []) if x["id"] != rid]
        data["overall_balance"] = sum(x["amount"] for x in data.get("records", []))

        save_data(data)
        save_chat_json(chat_id, data)        # ‚ûï –ø–µ—Ä-—á–∞—Ç–æ–≤—ã–µ —Ñ–∞–π–ª—ã
        update_or_send_day_window(chat_id, today_key())
        sync_all_backups_gdrive_async(data)
        send_backup_to_channel(chat_id)
        return True, removed
    return False, None

#‚ùé‚ùé‚ùé‚ùé‚ùé–æ–±—Ä–∞–±–æ—Ç—á–∏–∫ –ø–µ—Ä–µ—Å—ã–ª–∫–∏‚úÖ‚úÖ‚úÖ
