753 | def set_webhook():
754 |     url = f"{APP_URL}/{TOKEN}"
755 |     try:
756 |         bot.remove_webhook()
757 |         time.sleep(0.5)
758 |         bot.set_webhook(url=url)
759 |         log_info(f"Webhook ÑƒÑÑ‚Ð°Ð½Ð¾Ð²Ð»ÐµÐ½: {url}")
760 |     except Exception as e:
