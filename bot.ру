@bot.callback_query_handler(func=lambda c: True)
def handle_callback(call):
    chat_id = call.message.chat.id
    store = get_chat_store(chat_id)

    if call.data == "btn_balance":
        send_balance(chat_id)
        bot.answer_callback_query(call.id, "Ð‘Ð°Ð»Ð°Ð½Ñ Ð¾Ð±Ð½Ð¾Ð²Ð»Ñ‘Ð½ âœ…")
        return
    if call.data == "btn_report":
        send_report(chat_id)
        bot.answer_callback_query(call.id, "ÐžÑ‚Ñ‡Ñ‘Ñ‚ Ð¾Ð±Ð½Ð¾Ð²Ð»Ñ‘Ð½ ðŸ“Š")
        return
    if call.data == "btn_csv":
        send_csv(chat_id)
        bot.answer_callback_query(call.id, "CSV Ð¾Ñ‚Ð¿Ñ€Ð°Ð²Ð»ÐµÐ½ ðŸ“")
        return
    if call.data == "btn_reset":
        update_or_send_today_window(chat_id, text_override="âš ï¸ Ð’Ñ‹ ÑƒÐ²ÐµÑ€ÐµÐ½Ñ‹, Ñ‡Ñ‚Ð¾ Ñ…Ð¾Ñ‚Ð¸Ñ‚Ðµ Ð¾Ð±Ð½ÑƒÐ»Ð¸Ñ‚ÑŒ Ð²ÑÐµ Ð´Ð°Ð½Ð½Ñ‹Ðµ?", keyboard_override=build_main_keyboard(chat_id, confirm_reset=True))
        bot.answer_callback_query(call.id)
        return
    if call.data == "confirm_reset":
        store["records"] = []
        store["daily_records"] = {}
        store["balance"] = 0
        data["records"] = []
        data["overall_balance"] = 0
        save_data(data)
        update_or_send_today_window(chat_id)
        bot.answer_callback_query(call.id, "Ð”Ð°Ð½Ð½Ñ‹Ðµ ÑÐ±Ñ€Ð¾ÑˆÐµÐ½Ñ‹ ðŸ§¹")
        return
    if call.data == "cancel_reset":
        update_or_send_today_window(chat_id)
        bot.answer_callback_query(call.id)
        return
    if call.data == "btn_start":
        update_or_send_today_window(chat_id)
        bot.answer_callback_query(call.id, "ÐžÐºÐ½Ð¾ Ð¾Ð±Ð½Ð¾Ð²Ð»ÐµÐ½Ð¾ ðŸ”„")
        return
    if call.data == "btn_cod":
        send_info(chat_id)
        bot.answer_callback_query(call.id, "Ð˜Ð½Ñ„Ð¾Ñ€Ð¼Ð°Ñ†Ð¸Ñ ðŸ“„")
        return
    if call.data.startswith("edit_change:"):
        rid = int(call.data.split(":")[1])
        store["edit_wait"] = "change_value"
        store["edit_target"] = rid
        bot.send_message(chat_id, f"Ð’Ð²ÐµÐ´Ð¸Ñ‚Ðµ Ð½Ð¾Ð²ÑƒÑŽ ÑÑƒÐ¼Ð¼Ñƒ Ð¸ Ð·Ð°Ð¼ÐµÑ‚ÐºÑƒ Ð´Ð»Ñ Ð·Ð°Ð¿Ð¸ÑÐ¸ {rid}:")
        bot.answer_callback_query(call.id)
        return
    if call.data.startswith("edit_delete:"):
        rid = int(call.data.split(":")[1])
        store["edit_wait"] = "delete_id"
        store["edit_target"] = rid
        bot.send_message(chat_id, f"ÐŸÐ¾Ð´Ñ‚Ð²ÐµÑ€Ð´Ð¸Ñ‚Ðµ ÑƒÐ´Ð°Ð»ÐµÐ½Ð¸Ðµ Ð·Ð°Ð¿Ð¸ÑÐ¸ {rid} (Ð²Ð²ÐµÐ´Ð¸Ñ‚Ðµ ID ÑÐ½Ð¾Ð²Ð°):")
        bot.answer_callback_query(call.id)
        return
    if call.data == "edit_back" or call.data == "noop":
        update_or_send_today_window(chat_id)
        bot.answer_callback_query(call.id)
        return

